/* 全局变量 */
page {
  --primary-color: #8B6E4F;  /* 深棕色 */
  --secondary-color: #C83E3E;  /* 朱红色 */
  --bg-color: #F8F4E3;  /* 米白色 */
  --text-main: #333333;  /* 深灰 */
  --text-secondary: #666666;  /* 中灰 */
  --green-color: #7EA075;  /* 绿色 */
  --golden-color: #E6B56B;  /* 金色 */
  background-color: var(--bg-color);
}

/* 页面容器 */
.container {
  padding: 0 0 30rpx;
  box-sizing: border-box;
  background-color: var(--bg-color);
  min-height: 100vh;
  position: relative;
}

/* 固定顶部区域 */
.fixed-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background-color: var(--bg-color);
}

/* 内容区域 */
.content-area {
  padding-top: 190rpx; /* 与固定头部高度匹配 */
  padding-bottom: 20rpx;
  box-sizing: border-box;
}

/* 搜索框 */
.search-box {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: var(--bg-color);
  z-index: 20;
  box-shadow: 0 2rpx 10rpx rgba(139, 110, 79, 0.08);
}

.search-input-container {
  flex: 1;
  height: 70rpx;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 35rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  border: 1rpx solid rgba(230, 216, 195, 0.6);
  box-shadow: 0 2rpx 8rpx rgba(139, 110, 79, 0.05);
}

.search-input {
  flex: 1;
  height: 70rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: var(--text-main);
  background-color: transparent;
}

.clear-btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: rgba(200, 200, 200, 0.3);
}

.clear-icon {
  width: 20rpx;
  height: 20rpx;
  position: relative;
}

.clear-icon::before,
.clear-icon::after {
  content: '';
  position: absolute;
  width: 20rpx;
  height: 2rpx;
  background-color: #888;
  top: 9rpx;
  left: 0;
}

.clear-icon::before {
  transform: rotate(45deg);
}

.clear-icon::after {
  transform: rotate(-45deg);
}

