.exercise-result-tag {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  margin-left: 16rpx;
  flex-shrink: 0;
  font-weight: bold;
}

.exercise-result-tag.correct {
  background-color: rgba(126, 160, 117, 0.1);
  color: var(--success-color);
  border: 1rpx solid rgba(126, 160, 117, 0.2);
}

.exercise-result-tag.wrong {
  background-color: rgba(200, 62, 62, 0.1);
  color: var(--secondary-color);
  border: 1rpx solid rgba(200, 62, 62, 0.2);
}

/* 选项结果图标 */
.option-result-icon {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  position: relative;
  margin-left: 16rpx;
  flex-shrink: 0;
}

.option-result-icon.correct-selected {
  background-color: var(--success-color);
}

.option-result-icon.correct-selected:after {
  content: "";
  position: absolute;
  width: 12rpx;
  height: 6rpx;
  border-left: 3rpx solid #fff;
  border-bottom: 3rpx solid #fff;
  transform: rotate(-45deg);
  top: 8rpx;
  left: 6rpx;
}

.option-result-icon.correct {
  background-color: var(--success-color);
}

.option-result-icon.wrong {
  background-color: var(--secondary-color);
}

