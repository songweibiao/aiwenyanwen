/* 收藏页面样式 */
.container {
  padding: 0 30rpx;
}

.header {
  padding: 30rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 未登录状态 */
.not-login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.not-login-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.not-login-text {
  font-size: 30rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.login-btn {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}

/* 标签页切换 */
.tab-header {
  display: flex;
  background-color: #fff;
  border-bottom: 1px solid #eee;
  margin-bottom: 20rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #8B6E4F;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #8B6E4F;
  border-radius: 3rpx;
}

/* 加载中状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #8B6E4F;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.empty-tip {
  font-size: 28rpx;
  color: #999;
}

/* 名句列表 */
.quote-list {
  padding-bottom: 30rpx;
}

.quote-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-between;
}

.quote-content {
  flex: 1;
}

.quote-text {
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.quote-source {
  font-size: 26rpx;
  color: #999;
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.quote-actions {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

/* 文章列表 */
.article-list {
  padding-bottom: 30rpx;
}

.article-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-between;
}

.article-content {
  flex: 1;
}

.article-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.article-info {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.article-preview {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.article-actions {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

/* 取消收藏按钮 */
.cancel-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cancel-icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.6;
}

/* 通用按钮样式 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  font-size: 28rpx;
  transition: all 0.3s;
}

.btn-primary {
  background-color: #8B6E4F;
  color: #fff;
  border: none;
}

.btn-primary:active {
  background-color: #7A5E3F;
} 