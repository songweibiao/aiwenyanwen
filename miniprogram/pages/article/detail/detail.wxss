/* 课文详情页样式 - 中国传统风格优化版 */

/* 全局变量 */
page {
  --primary-color: #8B6E4F;      /* 深木色 */
  --primary-light: #A38B72;      /* 浅棕色 */
  --primary-dark: #6B4423;       /* 深棕色 */
  --secondary-color: #C83E3E;    /* 朱砂红 */
  --accent-color: #A7775F;       /* 赭石色 */
  --bg-color: #F8F4E3;           /* 宣纸色背景 */
  --card-color: #FFF9E6;         /* 卡片背景 */
  --text-color: #333333;         /* 墨黑色文字 */
  --border-color: #E8DFD5;       /* 淡棕色边框 */
  --success-color: #7EA075;      /* 成功色 */
  --warning-color: #E6B56B;      /* 警告色 */
  background-color: var(--bg-color);
  color: var(--text-color);
  font-size: 28rpx;
}

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: var(--bg-color);
  width: 100%;
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  background-image: url('https://example.com/loading_ink.png'); /* 水墨加载动画 */
  background-size: contain;
  animation: ink-spread 2s infinite;
}

@keyframes ink-spread {
  0% { transform: scale(0.8); opacity: 0.3; }
  50% { transform: scale(1.2); opacity: 0.8; }
  100% { transform: scale(0.8); opacity: 0.3; }
}

.loading-text {
  margin-top: 30rpx;
  color: var(--primary-color);
  font-family: "FangSong", "仿宋", serif;
}

/* 课文容器 */
.article-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  background-color: var(--bg-color);
  padding: 0;
  margin: 0;
  width: 100%;
}

/* 头部导航 */
.header {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0;
  background-color: #FFFFFF;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  z-index: 10;
  border-bottom: 1rpx solid #EEEEEE;
}

/* 优化返回按钮 */
.header-left {
  display: flex;
  align-items: center;
  padding-left: 0;
}

.back-btn {
  padding: 0 !important;
  margin: 0 !important;
  border: none !important;
  background-color: transparent !important;
  line-height: normal !important;
  display: flex;
  align-items: center;
  height: 100%;
}

.back-btn::after {
  border: none !important;
}

.back-text {
  font-size: 32rpx;
  color: #000000;
  padding-left: 30rpx;
}

.header-right {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-right: 30rpx;
}

.header-title {
  font-size: 34rpx;
  font-weight: bold;
  color: var(--primary-color);
  text-align: center;
  flex: 1;
  font-family: "KaiTi", "楷体", serif;
  letter-spacing: 2rpx;
}

.collect-icon {
  width: 50rpx;
  height: 50rpx;
  position: relative;
  background-image: url('https://example.com/seal_icon.png'); /* 印章图标 */
  background-size: contain;
  background-repeat: no-repeat;
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.collect-icon:after {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 30rpx;
  height: 30rpx;
  background-image: url('https://example.com/star_icon.png'); /* 星形图标 */
  background-size: contain;
  background-repeat: no-repeat;
  opacity: 0.6;
}

.collect-icon.collected:after {
  opacity: 1;
  filter: brightness(1.5);
}

/* 文章信息区 */
.article-info {
  padding: 20rpx 30rpx;
  display: flex;
  flex-wrap: wrap;
  background-color: var(--card-color);
  border-bottom: 2rpx solid var(--border-color);
  background-image: url('https://example.com/rice_paper.png');
  background-size: cover;
}

.info-item {
  margin-right: 30rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  font-family: "SimSun", "宋体", serif;
}

/* 课文信息区 */
.lesson-info {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 16rpx 0;
  margin: 0;
  background-color: rgba(248, 244, 227, 0.8);
  border-top: 0;
  border-bottom: 1rpx solid rgba(232, 223, 213, 0.5);
  width: 100%;
}

.lesson-info .info-item {
  margin: 0 20rpx;
}

.info-label {
  color: var(--text-color);
  opacity: 0.5;
  font-size: 24rpx;
}

.info-value {
  color: var(--text-color);
  opacity: 0.65;
  font-size: 24rpx;
  font-weight: normal;
}

/* 课程编号样式 */
.lesson-number {
  margin-right: 0;
  margin-left: auto;
  background-color: rgba(139, 110, 79, 0.08);
  padding: 2rpx 12rpx;
  border-radius: 6rpx;
  box-shadow: none;
}

.lesson-number .info-value {
  color: var(--text-color);
  opacity: 0.65;
  font-weight: normal;
  font-family: "STKaiti", "华文楷体", serif;
  font-size: 24rpx;
}

.info-status {
  padding: 2rpx 12rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
  background-color: rgba(139, 110, 79, 0.05);
  color: var(--text-color);
  border: 1rpx solid rgba(139, 110, 79, 0.1);
  box-shadow: none;
  margin: 0 20rpx;
  opacity: 0.7;
}

.info-status.in-progress {
  background-color: rgba(230, 181, 107, 0.05);
  color: var(--warning-color);
  border-color: rgba(230, 181, 107, 0.2);
  opacity: 0.7;
}

.info-status.completed {
  background-color: rgba(126, 160, 117, 0.05);
  color: var(--success-color);
  border-color: rgba(126, 160, 117, 0.2);
  opacity: 0.7;
}

/* 原文区域 */
.original-section {
  padding: 0;
  border-radius: 0;
  background-color: var(--card-color);
  margin-bottom: 0;
  border: 0;
  border-bottom: 1rpx solid var(--border-color);
  box-shadow: 0 6rpx 16rpx rgba(107, 68, 35, 0.1);
  background-image: url('https://example.com/scroll_paper.png');
  background-size: cover;
  width: 100%;
}

/* 标题区域 */
.title-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx 30rpx;
  margin: 0;
  border-bottom: 1rpx solid var(--border-color);
  position: relative;
}

.article-title {
  font-size: 42rpx;
  font-weight: bold;
  color: var(--primary-dark);
  font-family: "STKaiti", "华文楷体", serif;
  letter-spacing: 4rpx;
  text-shadow: 2rpx 2rpx 4rpx rgba(107, 68, 35, 0.1);
  padding: 0;
  margin: 0;
  border-bottom: 0;
  text-align: center;
  width: 100%;
}

/* 标题右侧收藏按钮 */
.title-collect {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}

.collect-text {
  font-size: 28rpx;
  color: var(--text-color);
  opacity: 0.7;
  padding: 8rpx 16rpx;
  border: 1rpx solid rgba(139, 110, 79, 0.3);
  border-radius: 8rpx;
}

.collect-text.collected {
  color: var(--secondary-color);
  border-color: var(--secondary-color);
  opacity: 0.9;
}

/* 标签栏 */
.tab-container {
  display: flex;
  background-color: var(--card-color);
  border: 0;
  border-bottom: 1rpx solid var(--border-color);
  border-radius: 0;
  overflow: hidden;
  box-shadow: 0 -4rpx 16rpx rgba(107, 68, 35, 0.1);
  margin-top: 0;
  width: 100%;
}

.tab-item {
  flex: 1;
  min-width: 120rpx;
  height: 94rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: var(--text-color);
  position: relative;
  transition: all 0.3s;
  background-image: url('https://example.com/tab_pattern.png'); /* 古典纹理背景 */
  background-size: cover;
  background-position: center;
  font-family: "KaiTi", "楷体", serif;
}

.tab-item.active {
  color: var(--secondary-color);
  font-weight: bold;
  background-color: rgba(200, 62, 62, 0.05);
}

.tab-item.active:after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 6rpx;
  background-color: var(--secondary-color);
  border-radius: 0;
}

.tab-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
}

/* 内容区域 */
.content-container {
  flex: 1;
  padding: 0 0 30rpx;
  background-color: var(--bg-color);
  width: 100%;
}

.content-section {
  background-color: var(--card-color);
  border-radius: 0;
  box-shadow: 0 6rpx 16rpx rgba(107, 68, 35, 0.1);
  overflow: hidden;
  border: 0;
  border-bottom: 1rpx solid var(--border-color);
  background-image: url('https://example.com/scroll_paper.png');
  background-size: cover;
  width: 100%;
}

/* 翻译区域 */
.translation-content {
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 优化翻译内容，与作者介绍区域样式保持一致 */
.translation-section {
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(107, 68, 35, 0.1);
  background-image: url('https://example.com/card_texture.png');
  background-size: cover;
  border: 1rpx solid var(--border-color);
}

.modern-text {
  font-size: 30rpx;
  line-height: 1.8;
  color: var(--text-color);
  text-align: justify;
  text-indent: 2em;
  font-family: "SimSun", "宋体", serif;
}

/* 逐句解析 */
.analysis-content {
  padding: 20rpx;
}

.analysis-navigation {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.nav-button {
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  background-color: var(--primary-color);
  color: white;
  border-radius: 8rpx;
  opacity: 0.9;
  box-shadow: 2rpx 2rpx 8rpx rgba(107, 68, 35, 0.2);
  transition: all 0.3s;
}

.nav-button:active {
  transform: scale(0.95);
}

.nav-button.disabled {
  background-color: #CCCCCC;
  opacity: 0.5;
  box-shadow: none;
}

.sentence-index {
  font-size: 28rpx;
  color: var(--primary-color);
  font-family: "STKaiti", "华文楷体", serif;
  background-color: rgba(139, 110, 79, 0.05);
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  border: 1rpx solid var(--border-color);
}

.sentence-card {
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(107, 68, 35, 0.1);
  background-image: url('https://example.com/card_texture.png'); /* 卡片纹理背景 */
  background-size: cover;
  border: 1rpx solid var(--border-color);
}

.sentence-section {
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx dashed var(--border-color);
  position: relative;
}

.sentence-section:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 16rpx;
  font-family: "STKaiti", "华文楷体", serif;
  display: flex;
  align-items: center;
}

.section-title:before {
  content: "";
  display: inline-block;
  width: 8rpx;
  height: 28rpx;
  background-color: var(--secondary-color);
  margin-right: 12rpx;
  border-radius: 4rpx;
}

.section-content {
  font-size: 30rpx;
  line-height: 1.8;
  color: var(--text-color);
  padding-left: 20rpx;
}

.section-content.original {
  font-weight: bold;
  font-family: "FangSong", "仿宋", serif;
  font-size: 32rpx;
}

.section-content.pinyin {
  color: var(--secondary-color);
  opacity: 0.8;
  letter-spacing: 1rpx;
}

.section-content.punctuated {
  font-family: "FangSong", "仿宋", serif;
  font-size: 32rpx;
}

.section-content.keywords {
  color: var(--secondary-color);
  background-color: rgba(200, 62, 62, 0.05);
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  border-left: 4rpx solid var(--secondary-color);
}

/* 背景知识 */
.background-content {
  padding: 20rpx;
}

.background-section {
  margin-bottom: 40rpx;
  position: relative;
  padding: 30rpx;
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 12rpx;
  border: 1rpx solid var(--border-color);
  box-shadow: 0 4rpx 12rpx rgba(107, 68, 35, 0.1);
  background-image: url('https://example.com/card_texture.png');
  background-size: cover;
}

.background-section:last-child {
  margin-bottom: 0;
}

.background-section:before {
  content: none;
}

/* 练习巩固 */
.exercise-content {
  padding: 20rpx;
}

.exercise-result {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
}

.result-card {
  width: 85%;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(107, 68, 35, 0.15);
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1rpx solid var(--border-color);
  background-image: url('https://example.com/result_bg.png'); /* 结果背景 */
  background-size: cover;
  background-position: center;
}

.result-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 30rpx;
  font-family: "STKaiti", "华文楷体", serif;
  letter-spacing: 2rpx;
  position: relative;
}

.result-title:after {
  content: "";
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 120%;
  height: 2rpx;
  background-color: var(--primary-light);
}

.result-score {
  font-size: 84rpx;
  font-weight: bold;
  color: var(--secondary-color);
  font-family: "STKaiti", "华文楷体", serif;
  text-shadow: 2rpx 2rpx 4rpx rgba(200, 62, 62, 0.2);
}

.result-text {
  font-size: 30rpx;
  color: var(--primary-color);
  margin-bottom: 20rpx;
}

.result-description {
  font-size: 30rpx;
  color: var(--text-color);
  margin-bottom: 40rpx;
  text-align: center;
  line-height: 1.6;
  padding: 0 20rpx;
}

.result-button {
  width: 220rpx;
  height: 70rpx;
  background-color: var(--primary-color);
  color: white;
  border-radius: 35rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  box-shadow: 0 4rpx 8rpx rgba(107, 68, 35, 0.2);
  transition: all 0.3s;
  font-family: "STKaiti", "华文楷体", serif;
}

.result-button:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 4rpx rgba(107, 68, 35, 0.2);
}

.exercise-list {
  margin-bottom: 40rpx;
}

.exercise-item {
  margin-bottom: 40rpx;
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(107, 68, 35, 0.1);
  border: 1rpx solid var(--border-color);
  position: relative;
  background-image: url('https://example.com/card_texture.png');
  background-size: cover;
}

.exercise-item:before {
  content: none;
}

.question-number {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 16rpx;
  font-family: "STKaiti", "华文楷体", serif;
  padding-left: 16rpx;
  border-left: 4rpx solid var(--primary-color);
}

.question-content {
  font-size: 32rpx;
  color: var(--text-color);
  margin-bottom: 30rpx;
  line-height: 1.6;
  padding: 0 16rpx;
}

.options-list {
  display: flex;
  flex-direction: column;
  padding: 0 16rpx;
}

.option-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 16rpx 20rpx;
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 8rpx;
  border: 1rpx solid var(--border-color);
  transition: all 0.3s;
}

.option-item.selected {
  background-color: var(--primary-color);
  border-color: var(--primary-dark);
  box-shadow: 0 2rpx 8rpx rgba(107, 68, 35, 0.15);
}

.option-marker {
  min-width: 40rpx;
  height: 40rpx;
  background-color: rgba(139, 110, 79, 0.1);
  color: var(--primary-color);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  margin-right: 20rpx;
  font-family: "STKaiti", "华文楷体", serif;
  border: 1rpx solid var(--primary-light);
}

.option-item.selected .option-marker {
  background-color: white;
  color: var(--primary-color);
  border-color: white;
}

.option-text {
  font-size: 30rpx;
  color: var(--text-color);
  flex: 1;
}

.option-item.selected .option-text {
  color: white;
}

.submit-button {
  width: 100%;
  height: 80rpx;
  background-color: var(--primary-color);
  color: white;
  border-radius: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(107, 68, 35, 0.2);
  transition: all 0.3s;
  font-family: "STKaiti", "华文楷体", serif;
  letter-spacing: 2rpx;
}

.submit-button:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(107, 68, 35, 0.2);
}

/* 提问拓展 */
.qa-content {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  height: 800rpx;
}

.messages-container {
  flex: 1;
  overflow-y: auto;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 12rpx;
  border: 1rpx solid var(--border-color);
  background-image: url('https://example.com/card_texture.png');
  background-size: cover;
  box-shadow: 0 4rpx 12rpx rgba(107, 68, 35, 0.1);
}

.welcome-message {
  padding: 20rpx 0;
}

.message-list {
  display: flex;
  flex-direction: column;
}

.message-item {
  margin-bottom: 30rpx;
  max-width: 85%;
  position: relative;
}

.user-message {
  align-self: flex-end;
}

.assistant-message {
  align-self: flex-start;
}

.message-content {
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  line-height: 1.6;
  position: relative;
}

.user-message .message-content {
  background-color: var(--primary-color);
  color: white;
  border-radius: 12rpx 0 12rpx 12rpx;
  box-shadow: 2rpx 2rpx 8rpx rgba(107, 68, 35, 0.15);
}

.assistant-message .message-content {
  background-color: rgba(255, 255, 255, 0.9);
  color: var(--text-color);
  border: 1rpx solid var(--border-color);
  border-radius: 0 12rpx 12rpx 12rpx;
  box-shadow: 2rpx 2rpx 8rpx rgba(107, 68, 35, 0.1);
}

.user-message .message-content:before {
  content: "";
  position: absolute;
  top: 0;
  right: -10rpx;
  width: 0;
  height: 0;
  border-left: 10rpx solid var(--primary-color);
  border-bottom: 10rpx solid transparent;
}

.assistant-message .message-content:before {
  content: "";
  position: absolute;
  top: 0;
  left: -10rpx;
  width: 0;
  height: 0;
  border-right: 10rpx solid white;
  border-bottom: 10rpx solid transparent;
}

.message-time {
  font-size: 24rpx;
  color: var(--text-color);
  opacity: 0.7;
  margin-top: 8rpx;
  text-align: right;
}

.assistant-message .message-time {
  text-align: left;
}

.suggested-questions {
  margin-bottom: 30rpx;
}

.suggestion-title {
  font-size: 30rpx;
  color: var(--primary-color);
  margin-bottom: 16rpx;
  font-family: "STKaiti", "华文楷体", serif;
  font-weight: bold;
}

.suggestion-list {
  display: flex;
  flex-direction: column;
}

.suggestion-item {
  margin-bottom: 16rpx;
  padding: 16rpx 20rpx;
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 8rpx;
  font-size: 28rpx;
  color: var(--text-color);
  border: 1rpx solid var(--border-color);
  transition: all 0.3s;
  box-shadow: 0 2rpx 4rpx rgba(107, 68, 35, 0.05);
  position: relative;
  padding-left: 40rpx;
}

.suggestion-item:before {
  content: "";
  position: absolute;
  left: 16rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 8rpx;
  background-color: var(--secondary-color);
  border-radius: 50%;
}

.suggestion-item:active {
  background-color: rgba(139, 110, 79, 0.1);
}

.input-container {
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 40rpx;
  padding: 10rpx 20rpx;
  border: 1rpx solid var(--border-color);
  box-shadow: 0 2rpx 8rpx rgba(107, 68, 35, 0.1);
  position: relative;
}

.question-input {
  flex: 1;
  height: 70rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
  font-family: "SimSun", "宋体", serif;
}

.send-button {
  min-width: 100rpx;
  height: 60rpx;
  background-color: var(--primary-color);
  color: white;
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  box-shadow: 0 2rpx 4rpx rgba(107, 68, 35, 0.2);
  transition: all 0.3s;
  font-family: "STKaiti", "华文楷体", serif;
}

.send-button:active {
  transform: scale(0.95);
  background-color: var(--primary-dark);
}

/* 作者和朝代信息 */
.author-info {
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
  margin: 0;
  border-bottom: 1rpx dashed var(--border-color);
}

.author-info .info-item {
  margin: 0 30rpx;
}

/* 作者介绍模块 */
.author-content {
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.author-section {
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(107, 68, 35, 0.1);
  background-image: url('https://example.com/card_texture.png');
  background-size: cover;
  border: 1rpx solid var(--border-color);
}

.author-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx dashed var(--border-color);
}

.author-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: var(--primary-light);
  margin-right: 20rpx;
  background-image: url('https://example.com/author_default.png');
  background-size: cover;
  border: 4rpx solid var(--primary-color);
  box-shadow: 0 4rpx 8rpx rgba(107, 68, 35, 0.2);
}

.author-title {
  flex: 1;
}

.author-name {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--primary-dark);
  display: block;
  margin-bottom: 10rpx;
  font-family: "STKaiti", "华文楷体", serif;
}

.author-dynasty {
  font-size: 28rpx;
  color: var(--primary-color);
  display: block;
  font-family: "STKaiti", "华文楷体", serif;
}

.author-bio {
  font-size: 30rpx;
  line-height: 1.8;
  color: var(--text-color);
  text-align: justify;
  text-indent: 2em;
  font-family: "SimSun", "宋体", serif;
}

/* 这里是新的样式，保留 */
.ancient-text {
  padding: 30rpx;
  font-size: 34rpx;
  line-height: 1.8;
  color: var(--text-color);
  text-align: justify;
  font-family: "FangSong", "仿宋", serif;
  letter-spacing: 2rpx;
  white-space: pre-wrap;
}

/* 分享按钮 */
.share-button {
  position: fixed;
  right: 30rpx;
  bottom: 160rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: var(--secondary-color);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
  transition: all 0.3s;
}

.share-button:active {
  transform: scale(0.95);
}

.share-text {
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: bold;
} 