/**index.wxss**/

/* 欢迎区域 */
.welcome-section {
  padding: 30rpx 0;
  margin-bottom: 30rpx;
}

.greeting-text {
  font-size: 36rpx;
  line-height: 1.4;
}

.greeting {
  color: var(--text-main);
}

.nickname {
  color: var(--primary-color);
  font-weight: bold;
}

.slogan {
  color: var(--text-main);
}

/* 继续学习区域 */
.continue-section {
  width: 100%;
  margin-bottom: 30rpx;
}

.section-title {
  margin-bottom: 20rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-main);
}

.time-text {
  font-size: 24rpx;
}

.article-info {
  padding: 10rpx 0;
}

.article-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.article-author {
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

.progress-bar {
  height: 10rpx;
  background-color: #f0f0f0;
  border-radius: 5rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
}

.progress-inner {
  height: 100%;
  background-color: var(--primary-color);
  border-radius: 5rpx;
}

.progress-text {
  font-size: 24rpx;
  text-align: right;
}

/* 主要功能区域 */
.main-functions {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.function-card {
  width: 48%;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.function-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.function-icon image {
  width: 100%;
  height: 100%;
}

.function-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: var(--text-main);
}

.function-desc {
  font-size: 24rpx;
  text-align: center;
}

/* 名句赏析 */
.quote-section {
  width: 100%;
  margin-bottom: 30rpx;
}

.quote-actions {
  display: flex;
  align-items: center;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}

.quote-content {
  padding: 20rpx 0;
}

.quote-text {
  font-size: 30rpx;
  color: var(--text-main);
  line-height: 1.6;
  margin-bottom: 20rpx;
  display: block;
}

.quote-source {
  font-size: 24rpx;
  text-align: right;
  margin-bottom: 20rpx;
}

.quote-translation {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
}

/* 推广领取区域 */
.promotion-section {
  width: 100%;
  margin-bottom: 30rpx;
  padding: 0;
  overflow: hidden;
}

.promotion-banner {
  width: 100%;
  height: 180rpx;
  background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: white;
  position: relative;
}

.promotion-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.promotion-desc {
  font-size: 24rpx;
  margin-bottom: 20rpx;
  opacity: 0.9;
}

.promotion-button {
  font-size: 24rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 30rpx;
  background-color: white;
  color: var(--primary-color);
  border-radius: 30rpx;
} 