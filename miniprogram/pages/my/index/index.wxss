/* 用户卡片样式 */
.user-card {
  margin-top: 30rpx;
  padding: 40rpx 30rpx;
  position: relative;
  overflow: hidden;
}

.user-card::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(139, 110, 79, 0.05), rgba(139, 110, 79, 0.1));
  z-index: 0;
}

.user-info-wrapper {
  position: relative;
  z-index: 1;
  width: 100%;
}

/* 未登录状态 */
.avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: rgba(139, 110, 79, 0.1);
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 30rpx;
}

.avatar-icon {
  width: 80rpx;
  height: 80rpx;
}

.login-btn-wrapper {
  flex: 1;
}

/* 已登录状态 */
.user-basic {
  display: flex;
  align-items: center;
}

.avatar-container {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
}

.avatar-wrapper {
  padding: 0;
  width: 120rpx !important;
  height: 120rpx !important;
  border-radius: 50%;
  overflow: hidden;
  background: transparent;
  position: relative;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 2rpx solid var(--primary-color);
}

.avatar-edit {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 40rpx;
  line-height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  font-size: 24rpx;
  text-align: center;
  border-bottom-left-radius: 60rpx;
  border-bottom-right-radius: 60rpx;
}

.user-text {
  display: flex;
  flex-direction: column;
}

.username {
  font-size: var(--font-lg);
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 6rpx;
}

.nickname-wrapper {
  display: flex;
  align-items: center;
}

.edit-icon {
  margin-left: 16rpx;
  padding: 6rpx;
}

.icon-edit {
  font-size: 28rpx;
  color: var(--primary-color);
}

.user-openid {
  font-size: var(--font-xs);
  color: var(--text-tertiary);
  width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.user-phone {
  font-size: var(--font-sm);
  color: var(--text-secondary);
}

/* 功能列表 */
.feature-list {
  margin-top: 30rpx;
}

.feature-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.feature-item:last-child {
  border-bottom: none;
}

.feature-name {
  font-size: var(--font-md);
  color: var(--text-primary);
}

.feature-arrow {
  color: var(--text-tertiary);
  font-size: var(--font-md);
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
}

.modal-content {
  position: relative;
  width: 80%;
  background-color: var(--card-bg);
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-lg);
  z-index: 10000;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.modal-title {
  font-size: var(--font-lg);
  font-weight: bold;
  color: var(--text-primary);
}

.modal-close {
  font-size: 40rpx;
  color: var(--text-tertiary);
  padding: 10rpx;
}

.modal-body {
  padding: 40rpx 30rpx;
}

.modal-btns {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.modal-btns .btn {
  width: 45%;
}

/* 微信登录按钮 */
.btn-wechat {
  background-color: #07C160;
  color: white;
  border-radius: var(--radius-xl);
  padding: 20rpx 0;
  width: 100%;
}

.wechat-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

/* 表单样式 */
.input-wrapper {
  background-color: #F5F7FA;
  border-radius: var(--radius-xl);
  padding: 10rpx 30rpx;
  margin-bottom: 20rpx;
}

.input {
  height: 80rpx;
  font-size: var(--font-md);
}

.input-error {
  color: var(--error-color);
  font-size: var(--font-sm);
  padding-left: 20rpx;
  margin-top: -10rpx;
  margin-bottom: 20rpx;
}

.switch-action {
  text-align: center;
  margin-top: 30rpx;
  color: var(--primary-color);
  font-size: var(--font-sm);
}

.login-tip {
  color: var(--text-secondary);
  font-size: var(--font-md);
} 