/* miniprogram/pages/word-learning/test-db/test-db.wxss */
.container {
  padding: 20rpx;
  box-sizing: border-box;
  min-height: 100vh;
  background-color: #f8f9fa;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.refresh-btn {
  background-color: #4CAF50;
  color: white;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #4caf50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 错误提示 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.error-text {
  font-size: 28rpx;
  color: #f44336;
  margin: 20rpx 0;
  text-align: center;
}

.retry-btn {
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  background-color: #f44336;
  color: white;
  margin-top: 20rpx;
}

/* 空数据提示 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  margin: 20rpx 0;
}

/* 词条列表 */
.word-list {
  width: 100%;
  margin-top: 20rpx;
}

.word-item {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.word-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 16rpx;
  border-bottom: 1px solid #eee;
  margin-bottom: 16rpx;
}

.word-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.word-id {
  font-size: 24rpx;
  color: #999;
}

.word-info {
  font-size: 28rpx;
  color: #333;
}

.info-row {
  display: flex;
  margin-bottom: 10rpx;
}

.label {
  color: #666;
  min-width: 120rpx;
}

.word-type, .word-meaning {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}

.word-example {
  background-color: #f5f5f5;
  padding: 16rpx;
  border-radius: 8rpx;
}

.example-text, .example-source {
  font-size: 26rpx;
  color: #666;
  display: block;
}

.example-source {
  color: #999;
  font-size: 24rpx;
  margin-top: 8rpx;
}

/* 调试信息样式 */
.debug-info {
  background-color: #f8f8f8;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  margin: 20rpx 0;
  font-size: 24rpx;
  color: #333;
  white-space: pre-wrap;
  word-break: break-all;
}

.debug-title {
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.debug-text {
  font-family: monospace;
  line-height: 1.5;
} 