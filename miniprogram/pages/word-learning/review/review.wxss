/* miniprogram/pages/word-learning/review/review.wxss */
/* 全局变量 */
page {
  --primary-color: #8B6E4F;  /* 深棕色 */
  --secondary-color: #C83E3E;  /* 朱红色 */
  --bg-color: #F8F4E3;  /* 米白色 */
  --text-main: #333333;  /* 深灰 */
  --text-secondary: #666666;  /* 中灰 */
  --green-color: #7EA075;  /* 绿色 */
  --golden-color: #E6B56B;  /* 金色 */
  --red-color: #E67575;  /* 红色 */
  background-color: var(--bg-color);
}

.container {
  padding: 20rpx;
  box-sizing: border-box;
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.card {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(107, 68, 35, 0.08);
  padding: 24rpx;
  margin-bottom: 20rpx;
  position: relative;
  border: 1rpx solid rgba(107, 68, 35, 0.1);
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

/* 学习进度 */
.progress-container {
  display: flex;
  flex-direction: column;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.progress-info {
  margin-bottom: 20rpx;
}

.progress-text {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
  display: block;
}

.progress-bar {
  height: 10rpx;
  background-color: rgba(139, 110, 79, 0.1);
  border-radius: 5rpx;
  overflow: hidden;
}

.progress-inner {
  height: 100%;
  background-color: var(--secondary-color);
}

.memory-info {
  display: flex;
  justify-content: center;
  align-items: center;
}

.memory-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 40rpx;
}

.memory-divider {
  width: 1px;
  height: 60rpx;
  background-color: rgba(107, 68, 35, 0.15);
}

.memory-count {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.memory-count.remembered {
  color: var(--green-color);
}

.memory-count.forgot {
  color: var(--red-color);
}

.memory-label {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 卡片容器 */
.card-container {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  perspective: 1500rpx;
}

/* 卡片样式 */
.word-card {
  width: 100%;
  height: 700rpx;
  position: relative;
  transform-style: preserve-3d;
  transition: transform 0.8s ease;
  padding: 0;
}

.word-card.flipped {
  transform: rotateY(180deg);
}

.card-front, .card-back {
  position: absolute;
  width: 100%;
  height: 100%;
  backface-visibility: hidden;
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  border-radius: 16rpx;
  box-sizing: border-box;
}

.card-front {
  background-color: #fff;
  z-index: 2;
  justify-content: center;
  align-items: center;
}

.card-back {
  background-color: #fff;
  transform: rotateY(180deg);
  z-index: 1;
}

.card-bg {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 200rpx;
  height: 200rpx;
  opacity: 0.1;
  z-index: 0;
}

.card-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 40rpx;
  text-align: center;
}

.word-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  position: relative;
  z-index: 1;
}

.word-text {
  font-size: 100rpx;
  font-weight: bold;
  color: var(--primary-color);
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.word-type-tag {
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  font-weight: 500;
  align-self: flex-start;
  margin-bottom: 20rpx;
}

.word-type-tag.virtual {
  background-color: rgba(200, 62, 62, 0.1);
  color: var(--secondary-color);
}

.word-type-tag.real {
  background-color: rgba(126, 160, 117, 0.1);
  color: var(--green-color);
}

.word-info {
  display: flex;
  flex-direction: column;
  margin-bottom: 40rpx;
}

.word-pinyin {
  font-size: 32rpx;
  color: var(--text-secondary);
  margin-bottom: 12rpx;
}

.word-meaning {
  font-size: 34rpx;
  color: var(--text-main);
  line-height: 1.5;
}

/* 例句部分 */
.example-section {
  margin-top: 20rpx;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.icon-title {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.title-text {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--primary-color);
}

.example-content {
  background-color: rgba(139, 110, 79, 0.05);
  padding: 20rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid var(--primary-color);
}

.example-text {
  font-size: 30rpx;
  color: var(--text-main);
  line-height: 1.6;
  display: block;
  margin-bottom: 10rpx;
}

.example-source {
  font-size: 24rpx;
  color: var(--text-secondary);
  text-align: right;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  margin: 40rpx 0;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.action-buttons.show {
  opacity: 1;
}

.action-buttons.hide {
  opacity: 0;
}

.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  width: 48%;
  border: none;
}

.btn-icon {
  width: 32rpx;
  height: 32rpx;
  margin: 0 8rpx;
}

.forgot-btn {
  background-color: var(--red-color);
  color: #fff;
}

.remembered-btn {
  background-color: var(--green-color);
  color: #fff;
}

/* 完成页面 */
.completion-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(248, 244, 227, 0.95);
  z-index: 10;
}

.completion-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  max-width: 90%;
}

.completion-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.completion-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 30rpx;
}

.completion-stats {
  width: 100%;
  margin-bottom: 40rpx;
}

.stats-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1px solid rgba(107, 68, 35, 0.1);
}

.stats-row:last-child {
  border-bottom: none;
}

.stats-label {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.stats-value {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-main);
}

.completion-actions {
  display: flex;
  width: 100%;
  justify-content: space-between;
}

.action-btn {
  padding: 20rpx 0;
  border-radius: 12rpx;
  font-size: 28rpx;
  width: 45%;
  border: none;
}

.home-btn {
  background-color: #fff;
  color: var(--primary-color);
  border: 1px solid var(--primary-color);
}

.review-btn {
  background-color: var(--primary-color);
  color: #fff;
}

/* 加载样式 */
.loading-container {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 20;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(139, 110, 79, 0.2);
  border-top: 4rpx solid var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 26rpx;
  color: var(--text-secondary);
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
