/* 状态切换栏 */
.status-tabs {
  display: flex;
  overflow-x: auto;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(255, 255, 255, 0.7) 100%);
  padding: 0;
  z-index: 10;
  box-shadow: 0 2rpx 8rpx rgba(139, 110, 79, 0.05);
  border-top: 1rpx solid rgba(230, 216, 195, 0.6);
  border-bottom: 1rpx solid rgba(230, 216, 195, 0.6);
  width: 100%;
  justify-content: space-around;
}

.status-tab {
  padding: 16rpx 10rpx;
  font-size: 28rpx;
  color: var(--text-secondary);
  white-space: nowrap;
  transition: all 0.3s;
  position: relative;
  flex: 1;
  text-align: center;
}

.status-tab.active {
  color: var(--primary-color);
  font-weight: 500;
}

.status-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 6rpx;
  background-color: var(--primary-color);
  border-radius: 3rpx 3rpx 0 0;
}

/* 简化的统计信息 */
.simple-stats {
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: var(--primary-color);
  background-color: rgba(255, 255, 255, 0.6);
  border-bottom: 1rpx solid rgba(230, 216, 195, 0.6);
  margin-bottom: 10rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 错误信息 */
.error-message {
  margin: 30rpx 20rpx 40rpx;
  padding: 20rpx;
  background-color: rgba(255, 241, 240, 0.8);
  border: 1rpx solid rgba(200, 62, 62, 0.3);
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(139, 110, 79, 0.08);
}

.error-title {
  font-weight: bold;
  color: var(--secondary-color);
  margin-right: 10rpx;
}

.error-text {
  color: var(--secondary-color);
}

/* 无数据提示 */
.no-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.no-data-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.7);
  border: 1rpx solid rgba(230, 216, 195, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  color: var(--text-secondary);
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(139, 110, 79, 0.08);
}

.no-data-text {
  font-size: 30rpx;
  color: var(--text-secondary);
}

/* 词条网格 */
.word-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 6rpx;
  box-sizing: border-box;
  width: 100%;
}

.word-item {
  width: 25%;
  padding: 8rpx;
  box-sizing: border-box;
  height: 150rpx;
  position: relative;
  transition: all 0.3s;
}

.word-item-inner {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(255, 255, 255, 0.7) 100%);
  border-radius: 14rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 12rpx rgba(139, 110, 79, 0.1);
  border: 1rpx solid rgba(230, 216, 195, 0.6);
}

.word-item:active .word-item-inner {
  transform: scale(0.95);
  background: linear-gradient(135deg, rgba(230, 216, 195, 0.4) 0%, rgba(255, 255, 255, 0.7) 100%);
}

.word-item.learned .word-item-inner {
  background: linear-gradient(135deg, rgba(235, 246, 255, 0.9) 0%, rgba(240, 248, 255, 0.7) 100%);
  border: 1rpx solid rgba(126, 160, 117, 0.4);
}

.word-item.review .word-item-inner {
  background: linear-gradient(135deg, rgba(255, 242, 230, 0.9) 0%, rgba(255, 246, 235, 0.7) 100%);
  border: 1rpx solid rgba(230, 181, 107, 0.4);
}

.word-item.learning .word-item-inner {
  background: linear-gradient(135deg, rgba(240, 255, 240, 0.9) 0%, rgba(245, 255, 245, 0.7) 100%);
  border: 1rpx solid rgba(126, 160, 117, 0.2);
}

.word-text {
  font-size: 46rpx;
  font-weight: 500;
  color: var(--text-main);
}

.word-status-icon {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  z-index: 2;
}

.status-dot {
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
}

.status-dot.learned {
  background-color: var(--green-color);
}

.status-dot.review {
  background-color: var(--golden-color);
}

.status-dot.learning {
  background-color: var(--primary-color);
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 20rpx 0;
  color: var(--primary-color);
  font-size: 28rpx;
}

.load-more:active {
  opacity: 0.7;
} 