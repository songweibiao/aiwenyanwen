/* miniprogram/pages/word-learning/index/index.wxss */
/* 全局变量 */
page {
  --primary-color: #8B6E4F;  /* 深棕色 */
  --secondary-color: #C83E3E;  /* 朱红色 */
  --bg-color: #F8F4E3;  /* 米白色 */
  --text-main: #333333;  /* 深灰 */
  --text-secondary: #666666;  /* 中灰 */
  --green-color: #7EA075;  /* 绿色 */
  --golden-color: #E6B56B;  /* 金色 */
  background-color: var(--bg-color);
}

.container {
  padding: 24rpx 20rpx;
  background: #f7f8fa;
  min-height: 100vh;
}

.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 顶部选项卡样式 */
.option-cards {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.option-card {
  width: 48%;
  border-radius: 16rpx;
  padding: 30rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(107, 68, 35, 0.08);
  border: 1rpx solid rgba(107, 68, 35, 0.1);
  height: 160rpx;
  display: flex;
  align-items: center;
}

.option-content {
  position: relative;
  z-index: 2;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.study-card {
  background-color: #8B6E4F;
  color: #fff;
}

.test-card {
  background-color: var(--secondary-color);
  color: #fff;
}

.option-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.option-desc {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 卡片标题样式 */
.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #222;
  margin-bottom: 16rpx;
}

.icon-title {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}

.title-text {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--primary-color);
}

.section-more {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 学习进度样式 */
.progress-content {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
}

.progress-text {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: block;
}

.progress-stats {
  display: flex;
  justify-content: space-between;
}

.stat-item {
  text-align: center;
}

.stat-number {
  font-size: 32rpx;
  color: #3c9cff;
  font-weight: bold;
}

.stat-label {
  font-size: 22rpx;
  color: #999;
}

/* 最近学习样式 */
.recent-section {
  margin-bottom: 40rpx;
}

.recent-list {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
}

.recent-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.recent-item:last-child {
  border-bottom: none;
}

.recent-word {
  font-size: 26rpx;
  color: #222;
}

.recent-status {
  font-size: 22rpx;
  color: #3c9cff;
  margin-left: 16rpx;
}

.recent-time {
  font-size: 20rpx;
  color: #bbb;
  margin-left: 16rpx;
}

.recent-empty {
  color: #bbb;
  font-size: 24rpx;
  text-align: center;
  padding: 32rpx 0;
}

/* 推荐学习样式 */
.recommend-words {
  display: flex;
  flex-direction: column;
}

.recommend-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.recommend-row:last-child {
  margin-bottom: 0;
}

.recommend-item {
  width: 48.5%;
  background: rgba(139, 110, 79, 0.02);
  border-radius: 12rpx;
  padding: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 1rpx solid rgba(107, 68, 35, 0.08);
}

.recommend-word {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--primary-color);
}

.recommend-state {
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
}

.recommend-state.common {
  background-color: rgba(126, 160, 117, 0.15);
  color: var(--green-color);
}

.recommend-state.rare {
  background-color: rgba(230, 181, 107, 0.15);
  color: var(--golden-color);
}

/* 考试类型卡片样式 */
.exam-types {
  width: 100%;
}

.exam-type-card {
  background-color: #fff;
  padding: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(107, 68, 35, 0.1);
  margin-bottom: 24rpx;
  border: 1rpx solid rgba(107, 68, 35, 0.15);
}

.exam-type-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.exam-type-icon {
  width: 64rpx;
  height: 64rpx;
  margin-right: 16rpx;
}

.exam-type-name {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--primary-color);
}

.exam-type-stats {
  display: flex;
  margin-bottom: 30rpx;
}

.stats-text {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-right: 30rpx;
}

.exam-type-actions {
  display: flex;
}

.action-btn {
  padding: 16rpx 40rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
  border: none;
}

.study-btn {
  background-color: var(--primary-color);
  color: #fff;
}

.review-btn {
  background-color: #fff;
  color: var(--primary-color);
  border: 1rpx solid var(--primary-color);
}

/* 加载样式 */
.loading-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.8);
  z-index: 999;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #4caf50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 页面标题样式 */
.header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.header-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.header-text {
  display: flex;
  flex-direction: column;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #222;
}

.header-subtitle {
  font-size: 24rpx;
  color: #888;
  margin-top: 8rpx;
}

/* 进度概览 */
.progress-overview {
  margin-bottom: 30rpx;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.statistics {
  font-size: 26rpx;
  color: #666;
}

.highlight {
  color: #4caf50;
  font-weight: 500;
}

.progress-bar {
  height: 10rpx;
  background-color: #eaecef;
  border-radius: 5rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.progress-inner {
  height: 100%;
  background-color: #4caf50;
  border-radius: 5rpx;
}

.stats-row {
  display: flex;
  justify-content: space-around;
  padding-top: 10rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 6rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 学习分类 */
.learning-categories {
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.view-all {
  font-size: 26rpx;
  color: #3a86ff;
}

.category-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.category-item {
  width: 46%;
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx 0;
  margin-bottom: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
  border: 2rpx solid transparent;
  transition: border 0.2s;
}

.category-item.selected {
  border: 2rpx solid #3c9cff;
  background: #eaf6ff;
}

.category-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  margin-bottom: 12rpx;
}

.category-icon-0 { background: #e6f7e6; }
.category-icon-1 { background: #e6f0ff; }
.category-icon-2 { background: #fff7e6; }
.category-icon-3 { background: #f5e6ff; }

.category-info {
  display: flex;
  flex-direction: column;
}

.category-name {
  font-size: 26rpx;
  color: #222;
  font-weight: 500;
}

.category-count {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

.category-progress {
  height: 6rpx;
  background-color: #eaecef;
  border-radius: 3rpx;
  overflow: hidden;
}

.category-progress-inner {
  height: 100%;
  background-color: #4caf50;
  border-radius: 3rpx;
}

/* 快捷功能 */
.quick-actions {
  margin-bottom: 30rpx;
}

.function-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr 1fr;
  grid-gap: 10rpx;
  padding: 20rpx;
}

.function-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.function-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  margin-bottom: 10rpx;
}

.continue-icon {
  background-color: rgba(76, 175, 80, 0.1);
  border: 2rpx solid rgba(76, 175, 80, 0.3);
}

.start-icon {
  background-color: rgba(33, 150, 243, 0.1);
  border: 2rpx solid rgba(33, 150, 243, 0.3);
}

.review-icon {
  background-color: rgba(255, 152, 0, 0.1);
  border: 2rpx solid rgba(255, 152, 0, 0.3);
}

.stats-icon {
  background-color: rgba(156, 39, 176, 0.1);
  border: 2rpx solid rgba(156, 39, 176, 0.3);
}

.function-name {
  font-size: 24rpx;
  color: #333;
}

/* 测试按钮 */
.test-button-container {
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
}

.test-db-button {
  background-color: #4CAF50;
  color: white;
  font-size: 28rpx;
  padding: 16rpx 30rpx;
  border-radius: 30rpx;
}

/* 调试信息样式 */
.debug-info {
  background-color: #f8f8f8;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  margin: 20rpx 0;
  font-size: 24rpx;
  color: #333;
  white-space: pre-wrap;
  word-break: break-all;
}

.debug-title, .error-title {
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.debug-text, .error-text {
  font-family: monospace;
  line-height: 1.5;
}

.error-message {
  background: #fff0f0;
  color: #d93026;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 24rpx;
}

.error-title {
  font-weight: bold;
  margin-right: 8rpx;
}

.error-text {
  font-size: 24rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 40rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #e5e5e5;
  border-top: 6rpx solid #3c9cff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 搜索框 */
.search-section {
  margin-bottom: 32rpx;
}

.search-input {
  width: 100%;
  height: 72rpx;
  border-radius: 36rpx;
  background: #fff;
  border: 1rpx solid #e5e5e5;
  padding: 0 32rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 分区标题 */
.section {
  margin-bottom: 40rpx;
}
