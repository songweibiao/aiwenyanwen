/* 课文详情页样式 - 中国传统风格优化版 */

/* 全局变量 */
page {
  --primary-color: #8B6E4F;      /* 深木色 */
  --primary-light: #A38B72;      /* 浅棕色 */
  --primary-dark: #6B4423;       /* 深棕色 */
  --secondary-color: #C83E3E;    /* 朱砂红 */
  --accent-color: #A7775F;       /* 赭石色 */
  --bg-color: #F8F4E3;           /* 宣纸色背景 */
  --card-color: #FFF9E6;         /* 卡片背景 */
  --text-color: #333333;         /* 墨黑色文字 */
  --border-color: #E8DFD5;       /* 淡棕色边框 */
  --success-color: #7EA075;      /* 成功色 */
  --warning-color: #E6B56B;      /* 警告色 */
  background-color: var(--bg-color);
  color: var(--text-color);
  font-size: 28rpx;
}

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: var(--bg-color);
  width: 100%;
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

/* 课文容器 */
.article-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  background-color: var(--bg-color);
  padding: 0;
  margin: 0;
  width: 100%;
}

/* 头部导航 */
.header {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0;
  background-color: #FFFFFF;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  z-index: 10;
  border-bottom: 1rpx solid #EEEEEE;
}

/* 优化返回按钮 */
.header-left {
  display: flex;
  align-items: center;
  padding-left: 0;
}

.back-btn {
  padding: 0 !important;
  margin: 0 !important;
  border: none !important;
  background-color: transparent !important;
  line-height: normal !important;
  display: flex;
  align-items: center;
  height: 100%;
}

.back-btn::after {
  border: none !important;
}

.back-text {
  font-size: 32rpx;
  color: #000000;
  padding-left: 30rpx;
}

.header-right {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-right: 30rpx;
}

.header-title {
  font-size: 34rpx;
  font-weight: bold;
  color: var(--primary-color);
  text-align: center;
  flex: 1;
  letter-spacing: 2rpx;
}

.collect-icon {
  width: 50rpx;
  height: 50rpx;
  position: relative;
  background-size: contain;
  background-repeat: no-repeat;
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.collect-icon:after {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 30rpx;
  height: 30rpx;
  background-size: contain;
  background-repeat: no-repeat;
  opacity: 0.6;
}

.collect-icon.collected:after {
  opacity: 1;
  filter: brightness(1.5);
}

/* 文章信息区 */
.article-info {
  padding: 20rpx 30rpx;
  display: flex;
  flex-wrap: wrap;
  background-color: var(--card-color);
  border-bottom: 2rpx solid var(--border-color);
}

.info-item {
  margin-right: 30rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
}

/* 课文信息区 */
.lesson-info {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 16rpx 0;
  margin: 0;
  background-color: rgba(248, 244, 227, 0.8);
  border-top: 0;
  border-bottom: 1rpx solid rgba(232, 223, 213, 0.5);
  width: 100%;
}

.lesson-info .info-item {
  margin: 0 20rpx;
}

.info-label {
  color: var(--text-color);
  opacity: 0.5;
  font-size: 24rpx;
}

.info-value {
  color: var(--text-color);
  opacity: 0.65;
  font-size: 24rpx;
  font-weight: normal;
}

/* 课程编号样式 */
.lesson-number {
  margin-right: 0;
  margin-left: auto;
  background-color: rgba(139, 110, 79, 0.08);
  padding: 2rpx 12rpx;
  border-radius: 6rpx;
  box-shadow: none;
}

.lesson-number .info-value {
  color: var(--text-color);
  opacity: 0.65;
  font-weight: normal;
  font-size: 24rpx;
}

.info-status {
  padding: 2rpx 12rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
  background-color: rgba(139, 110, 79, 0.05);
  color: var(--text-color);
  border: 1rpx solid rgba(139, 110, 79, 0.1);
  box-shadow: none;
  margin: 0 20rpx;
  opacity: 0.7;
}

.info-status.in-progress {
  background-color: rgba(230, 181, 107, 0.05);
  color: var(--warning-color);
  border-color: rgba(230, 181, 107, 0.2);
  opacity: 0.7;
}

.info-status.completed {
  background-color: rgba(126, 160, 117, 0.05);
  color: var(--success-color);
  border-color: rgba(126, 160, 117, 0.2);
  opacity: 0.7;
}

/* 原文区域弱化样式 */
.original-section {
  padding: 0;
  border-radius: 0;
  background-color: var(--bg-color); /* 与页面背景一致 */
  margin-bottom: 0;
  border: none;
  box-shadow: none;
  background-image: none;
  width: 100%;
  position: relative;
}

/* 标题区域 */
.title-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx 30rpx;
  margin: 0;
  border-bottom: 1rpx solid var(--border-color);
  position: relative;
}

.article-title {
  font-size: 42rpx;
  font-weight: bold;
  color: var(--primary-dark);
  text-shadow: 2rpx 2rpx 4rpx rgba(107, 68, 35, 0.1);
  padding: 0;
  margin: 0;
  border-bottom: 0;
  text-align: center;
  width: 100%;
}

/* 标题右侧收藏按钮 */
.title-collect {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}

.collect-text {
  font-size: 28rpx;
  color: var(--text-color);
  opacity: 0.7;
  padding: 8rpx 16rpx;
  border: 1rpx solid rgba(139, 110, 79, 0.3);
  border-radius: 8rpx;
}

.collect-text.collected {
  color: var(--secondary-color);
  border-color: var(--secondary-color);
  opacity: 0.9;
}

/* 标签栏 */
.tab-container {
  display: flex;
  background-color: #F8F4E3;
  border-top: 2rpx solidrgb(240, 233, 200);
  border-bottom: 2rpx solid rgb(247, 224, 201);
  box-shadow: none;
  margin-top: 0;
  width: 100%;
  position: sticky;
  top: 0;
  z-index: 20;
  height: 96rpx;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 96rpx;
  padding: 0;
  background: none;
  font-size: 24rpx;
  color: #B8AFA3;
  position: relative;
  transition: all 0.2s;
  font-weight: 500;
}

.tab-item.active {
  color: #8B6E4F;
  font-weight: bold;
  background: none;
}

.tab-item.active:after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 20rpx;
  right: 20rpx;
  height: 6rpx;
  background-color: #8B6E4F;
  border-radius: 6rpx 6rpx 0 0;
}

.tab-icon {
  width: 48rpx;
  height: 48rpx;
  margin: 0;
  margin-bottom: 6rpx;
  display: block;
}

.tab-item text {
  font-size: 24rpx;
  line-height: 1;
  margin: 0;
  padding: 0;
}

/* 内容区域 */
.content-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  background-color: var(--bg-color);
  width: 100%;
}

.content-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  background-color: var(--card-color);
  border-radius: 0;
  box-shadow: 0 6rpx 16rpx rgba(107, 68, 35, 0.1);
  overflow: hidden;
  border: 0;
  border-bottom: 1rpx solid var(--border-color);
}

/* 翻译区域 */
.translation-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 优化翻译内容，与作者介绍区域样式保持一致 */
.translation-section {
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 12rpx;
  padding: 30rpx!important;
  box-shadow: 0 4rpx 12rpx rgba(107, 68, 35, 0.1);
  background-image: none;
  background-size: cover;
  border: 1rpx solid var(--border-color);
  margin: 20rpx 0;
  font-size: 32rpx;
  color: var(--text-color);
  line-height: 1.6;
  flex-shrink: 0;
}

.modern-text {
  font-size: 30rpx;
  line-height: 2.0;
  color: var(--text-color);
  text-align: justify;
  text-indent: 2em;
  margin-top: 32rpx;
  margin-bottom: 16rpx;
  word-wrap: break-word;
  white-space: pre-wrap;
  word-break: break-all;
}

/* 逐句解析 */
.analysis-content {
  padding: 20rpx;
}

.analysis-navigation {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 12rpx;
  padding: 15rpx;
  border: 1rpx solid var(--border-color);
}

.sentence-index-selector {
  display: flex;
  align-items: center;
  background-color: rgba(139, 110, 79, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  border: 1rpx solid var(--border-color);
}

.current-index {
  color: var(--secondary-color);
  font-weight: bold;
  font-size: 32rpx;
}

.separator {
  margin: 0 5rpx;
  color: var(--text-color);
  opacity: 0.7;
}

.total-sentences {
  color: var(--text-color);
  opacity: 0.7;
}

.dropdown-icon {
  font-size: 20rpx;
  margin-left: 10rpx;
  color: var(--primary-color);
}

/* 句子导航相关的样式 */
.navigation-toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 12rpx;
  padding: 15rpx;
  border: 1rpx solid var(--border-color);
}

.nav-button {
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  background-color: var(--primary-color);
  color: white;
  border-radius: 8rpx;
  opacity: 0.9;
  box-shadow: 2rpx 2rpx 8rpx rgba(107, 68, 35, 0.2);
  transition: all 0.3s;
}

.nav-button:active {
  transform: scale(0.95);
}

.nav-button.disabled {
  background-color: #CCCCCC;
  opacity: 0.5;
  box-shadow: none;
}

.sentence-list-btn {
  width: auto;
  flex: 0 0 auto;
  padding: 10rpx 20rpx;
  background-color: var(--primary-color);
  border-radius: 8rpx;
  margin: 0 10rpx;
  text-align: center;
}

/* 句子列表抽屉 */
.sentence-list-drawer {
  position: fixed;
  top: 0;
  right: -80%;
  width: 80%;
  height: 100%;
  background-color: white;
  box-shadow: -4rpx 0 20rpx rgba(0, 0, 0, 0.15);
  z-index: 1000;
  transition: right 0.3s ease;
  display: flex;
  flex-direction: column;
}

.sentence-list-drawer.show {
  right: 0;
}

.drawer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid var(--border-color);
  background-color: var(--bg-color);
}

.drawer-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--primary-color);
}

.drawer-close {
  font-size: 40rpx;
  color: var(--text-color);
  opacity: 0.7;
  padding: 10rpx;
}

.drawer-content {
  flex: 1;
  overflow: hidden;
}

.sentence-list {
  height: 100%;
  padding: 20rpx;
}

.sentence-list-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid var(--border-color);
  transition: background-color 0.2s;
}

.sentence-list-item.current {
  background-color: rgba(139, 110, 79, 0.1);
  border-left: 6rpx solid var(--primary-color);
}

.sentence-number {
  min-width: 40rpx;
  margin-right: 20rpx;
  color: var(--primary-color);
  font-weight: bold;
}

.sentence-text {
  flex: 1;
  line-height: 1.5;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 85%;
}

/* 索引选择器弹窗 */
.index-selector-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s;
}

.index-selector-modal.show {
  opacity: 1;
  visibility: visible;
}

.index-selector-content {
  width: 80%;
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.index-selector-title {
  font-size: 30rpx;
  color: var(--primary-color);
  text-align: center;
  margin-bottom: 30rpx;
}

.index-slider {
  margin: 30rpx 0;
}

.index-selector-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
  border-top: 1rpx solid var(--border-color);
  padding-top: 20rpx;
}

.index-selector-cancel, 
.index-selector-confirm {
  padding: 15rpx 30rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
}

.index-selector-cancel {
  color: var(--text-color);
  background-color: #f5f5f5;
}

.index-selector-confirm {
  color: white;
  background-color: var(--primary-color);
}

/* 作者和朝代信息 */
.author-info {
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
  margin: 0;
  border-bottom: 1rpx dashed var(--border-color);
}

.author-info .info-item {
  margin: 0 30rpx;
}

/* 作者介绍模块 */
.author-content {
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.author-section {
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(107, 68, 35, 0.1);
  background-image: none;
  background-size: cover;
  border: 1rpx solid var(--border-color);
  margin: 20rpx 0;
  font-size: 32rpx;
  color: var(--text-color);
  line-height: 1.6;
  flex-shrink: 0;
}

.author-header {
  display: flex;
  align-items: baseline;
  gap: 24rpx;
  margin-bottom: 30rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx dashed var(--border-color);
}

.author-name {
  font-size: 38rpx;
  font-weight: bold;
  color: var(--primary-dark);
}

.author-dynasty {
  font-size: 28rpx;
  color: var(--primary-color);
  margin-left: 12rpx;
}

.author-bio {
  font-size: 30rpx;
  line-height: 2.0;
  color: var(--text-color);
  text-align: justify;
  text-indent: 2em;
  margin-top: 32rpx;
  margin-bottom: 16rpx;
  word-wrap: break-word;
  white-space: normal;
  word-break: break-all;
}

/* 这里是新的样式，保留 */
.ancient-text {
  font-size: 32rpx;
  line-height: 1.8;
  color: var(--primary-dark);
  padding: 18rpx 20rpx 18rpx 20rpx;
  text-align: justify;
  margin: 0;
  white-space: pre-wrap;
  background: none;
  border: none;
  box-shadow: none;
}

/* 分享按钮 */
.share-button {
  position: fixed;
  right: 30rpx;
  bottom: 160rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: var(--secondary-color);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
  transition: all 0.3s;
}

.share-button:active {
  transform: scale(0.95);
}

.share-text {
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: bold;
}

/* 古文原文容器 */
.ancient-text-container {
  position: relative;
}

.ancient-text-container.collapsed {
  max-height: 600rpx;
  height: 600rpx;
  overflow: visible;
  position: relative;
}

.ancient-text-container.expanded {
  max-height: 800rpx;
  height: 800rpx;
  overflow: visible;
}

.ancient-text-container scroll-view {
  height: 100%;
  background: transparent;
}

/* 底部滚动提示 */
.scroll-tip-bottom {
  position: absolute;
  bottom: 70rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 30;
  background: rgba(255,255,255,0.9);
  color: #b3a48a;
  font-size: 24rpx;
  padding: 10rpx 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  pointer-events: none;
  animation: fade-in-out 2.5s ease forwards;
}

@keyframes fade-in-out {
  0% { opacity: 0; transform: translateX(-50%) translateY(10rpx); }
  15% { opacity: 1; transform: translateX(-50%) translateY(0); }
  85% { opacity: 1; transform: translateX(-50%) translateY(0); }
  100% { opacity: 0; transform: translateX(-50%) translateY(-10rpx); }
}

/* 底部渐变遮罩样式 */
.ancient-bottom-mask {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 60rpx;
  background: linear-gradient(to bottom, rgba(255,255,255,0) 0%, rgba(248,244,227,0.95) 100%);
  pointer-events: none;
  z-index: 9;
}

/* 优化滚动条样式（兼容微信小程序） */
.ancient-text-container.expanded::-webkit-scrollbar {
  width: 8rpx;
  background: rgba(0,0,0,0.05);
}
.ancient-text-container.expanded::-webkit-scrollbar-thumb {
  background: rgba(139,110,79,0.2);
  border-radius: 8rpx;
}

/* 加载占位符 */
.ancient-text-container.placeholder {
  max-height: 600rpx; /* 与收起状态高度一致 */
  background-color: var(--card-color);
}

.loading-placeholder {
  width: 100%;
  height: 600rpx;
  background: linear-gradient(90deg, rgba(248, 244, 227, 0.5) 25%, rgba(255, 249, 230, 0.8) 50%, rgba(248, 244, 227, 0.5) 75%);
  background-size: 200% 100%;
  animation: loading-shine 1.5s infinite;
}

@keyframes loading-shine {
  0% { background-position: -100% 0; }
  100% { background-position: 100% 0; }
}

/* 展开/收起按钮弱化 */
.toggle-content-button {
  width: 100%;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: none;
  border-top: 1rpx solid #f0ede6;
  cursor: pointer;
  box-shadow: none;
}

.toggle-button-text {
  font-size: 26rpx;
  color: #b3a48a;
  padding: 0 12rpx;
  line-height: 26rpx;
  display: inline-flex;
  align-items: center;
}

.toggle-button-icon {
  width: 20rpx;
  height: 20rpx;
  border-right: 2rpx solid #b3a48a;
  border-bottom: 2rpx solid #b3a48a;
  transform: rotate(-135deg);
  margin-top: 15rpx;
  display: inline-block;
  vertical-align: middle;
  position: relative;
  top: -2rpx;
  transition: transform 0.3s, top 0.3s;
}

.toggle-button-icon.collapsed {
  margin-top: -15rpx;
  transform: rotate(45deg);
  top: 2rpx;
}

/* 滚动提示样式 */
.scroll-tip {
  position: absolute;
  top: 12rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(255,255,255,0.92);
  color: #b3a48a;
  font-size: 24rpx;
  padding: 6rpx 24rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  z-index: 10;
  opacity: 0.95;
  pointer-events: none;
  animation: fade-in-out 2.5s linear;
}

@keyframes fade-in-out {
  0% { opacity: 0; }
  10% { opacity: 0.95; }
  90% { opacity: 0.95; }
  100% { opacity: 0; }
}

.ancient-text-container.auto {
  max-height: none;
  height: auto;
  overflow: visible;
}

.ancient-text-container,
.ancient-text-container.auto,
.ancient-text-container.expanded,
.ancient-text-container.collapsed,
.ancient-text-container:active,
.ancient-text-container:hover {
  background: transparent !important;
  -webkit-tap-highlight-color: transparent;
}

.ancient-text-container scroll-view,
.ancient-text-container scroll-view:active,
.ancient-text-container scroll-view:hover {
  background: transparent !important;
  -webkit-tap-highlight-color: transparent;
}

.ancient-text,
.ancient-text:active,
.ancient-text:hover {
  background: transparent !important;
