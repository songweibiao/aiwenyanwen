  position: absolute;
  width: 20rpx;
  height: 20rpx;
  opacity: 0;
  transition: all 0.2s ease;
}

.pause-icon::before, .pause-icon::after {
  content: "";
  position: absolute;
  width: 6rpx;
  height: 20rpx;
  background: #fff;
  border-radius: 2rpx;
}

.pause-icon::before {
  left: 4rpx;
}

.pause-icon::after {
  right: 4rpx;
}

.audio-btn-play.playing .play-icon {
  opacity: 0;
}

.audio-btn-play.playing .pause-icon {
  opacity: 1;
}

