/**index.wxss**/

/* 全局变量 */
page {
  --primary-color: #8B6E4F;  /* 深棕色 */
  --secondary-color: #C83E3E;  /* 朱红色 */
  --bg-color: #F8F4E3;  /* 米白色 */
  --text-main: #333333;  /* 深灰 */
  --text-secondary: #666666;  /* 中灰 */
  --green-color: #7EA075;  /* 绿色 */
  --golden-color: #E6B56B;  /* 金色 */
  background-color: var(--bg-color);
}

/* 加载状态 */
.loading-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 6rpx solid rgba(139, 110, 79, 0.2);
  border-top: 6rpx solid var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.container {
  padding: 20rpx;
  box-sizing: border-box;
  width: 100%;
}

.card {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(107, 68, 35, 0.1);
  padding: 24rpx;
  margin-bottom: 24rpx;
  position: relative;
  border: 1rpx solid rgba(107, 68, 35, 0.15);
  width: 100%;
  box-sizing: border-box;
}

.text-light {
  color: var(--text-secondary);
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 欢迎区域 */
.welcome-section {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 16rpx;
  padding: 18rpx 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(107,68,35,0.04);
  border-bottom: 1rpx solid #f0e8dd;
}

.user-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  margin-right: 18rpx;
  border: 2rpx solid #f0e8dd;
  flex-shrink: 0;
}

.welcome-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.welcome-row {
  display: flex;
  align-items: baseline;
}

.greeting {
  font-size: 30rpx;
  color: #6B4423;
  font-weight: 500;
}

.nickname {
  font-size: 32rpx;
  color: #C83E3E;
  font-weight: bold;
  margin-left: 6rpx;
}

.slogan {
  font-size: 24rpx;
  color: #b8a98a;
  margin-top: 6rpx;
  letter-spacing: 2rpx;
}

/* 继续学习区域 */
.continue-section {
  position: relative;
  border-left: 8rpx solid var(--secondary-color);
}

.continue-section::after {
  content: "";
  position: absolute;
  right: 24rpx;
  bottom: 20rpx;
  width: 36rpx;
  height: 36rpx;
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="%236B4423"><path d="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z"/></svg>');
  background-size: contain;
  opacity: 0.5;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--primary-color);
  position: relative;
  padding-left: 20rpx;
  margin-bottom: 16rpx;
}

.section-title::before {
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 28rpx;
  background-color: var(--secondary-color);
  border-radius: 4rpx;
}

.title-text {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--primary-color);
  position: relative;
}

.time-text {
  font-size: 24rpx;
}

.article-info {
  padding: 10rpx 0;
}

.article-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: var(--text-main);
}

.article-author {
  font-size: 24rpx;
  margin-bottom: 16rpx;
}

.progress-bar {
  height: 10rpx;
  background-color: rgba(107, 68, 35, 0.1);
  border-radius: 5rpx;
  margin-bottom: 8rpx;
  overflow: hidden;
}

.progress-inner {
  height: 100%;
  background-color: var(--primary-color);
  border-radius: 5rpx;
}

.progress-text {
  font-size: 24rpx;
  text-align: right;
}

/* 整合卡片区域 */
.integrated-card {
  width: 100%;
  margin-bottom: 24rpx;
  padding: 24rpx;
  position: relative;
  box-sizing: border-box;
}

.divider {
  height: 1rpx;
  background-color: rgba(107, 68, 35, 0.1);
  margin: 24rpx 0;
  width: 100%;
}

/* 教材同步区域 */
.textbook-section {
  width: 100%;
  padding: 0;
  background-color: transparent;
  box-sizing: border-box;
}

.textbook-header {
  margin-bottom: 16rpx;
}

.grade-selector {
  display: flex;
  align-items: center;
  color: var(--primary-color);
  font-size: 28rpx;
  font-weight: bold;
}

.dropdown-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 8rpx;
}

.current-lesson {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}

.lesson-info {
  flex: 1;
  overflow: hidden;
}

.lesson-title {
  font-size: 28rpx;
  color: var(--text-main);
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.lesson-author {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-top: 6rpx;
}

.change-btn {
  font-size: 32rpx;
  color: #fff;
  background-color: var(--primary-color);
  padding: 6rpx 16rpx;
  border: 1px solid var(--primary-color);
  border-radius: 30rpx;
  margin-left: 16rpx;
  flex-shrink: 0;
  line-height: 1.2;
  box-shadow: 0 2rpx 6rpx rgba(139, 110, 79, 0.2);
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
}

.change-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 6rpx;
  filter: brightness(10);
}

.change-btn:active {
  transform: scale(0.95);
  background-color: var(--secondary-color);
  border-color: var(--secondary-color);
}

/* 主要功能卡片 */
.main-cards {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 8rpx 0;
  background-color: transparent;
  box-sizing: border-box;
}

.main-card {
  width: 48%; /* 调整为48%宽度，允许两个卡片并排 */
  height: 110rpx;
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  padding: 0;
  background-color: transparent;
}

.card-content {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: rgba(107, 68, 35, 0.05);
  padding: 20rpx;
  border-radius: 10rpx;
}

.card-title {
  display: flex;
  align-items: center;
}

.card-icon {
  width: 50rpx;
  height: 50rpx;
  position: relative;
  z-index: 2;
  flex-shrink: 0;
}

/* 功能图标行 */
.feature-icons {
  display: flex;
  justify-content: space-between;
  padding: 8rpx 0;
  background-color: transparent;
  width: 100%;
  box-sizing: border-box;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 22%;
}

.feature-icon {
  width: 56rpx;
  height: 56rpx;
  margin-bottom: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.feature-text {
  font-size: 24rpx;
  color: var(--text-main);
  text-align: center;
}

/* 虚实词学习卡片 */
.word-study-card {
  margin-bottom: 24rpx;
}

.word-options {
  margin: 20rpx 0;
}

.current-word-category {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.word-option-title {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-main);
  flex: 1;
}

.word-option-count {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-right: 20rpx;
}

.word-action {
  display: flex;
  justify-content: space-between;
  margin-top: 24rpx;
  padding: 0 40rpx;
}

.word-btn {
  width: 45%;
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
  padding: 16rpx 0;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 8rpx rgba(107, 68, 35, 0.2);
}

.word-learn-btn {
  background-color: var(--primary-color);
  color: white;
}

.word-practice-btn {
  background-color: white;
  color: var(--primary-color);
  border: 1rpx solid var(--primary-color);
}

/* 名句赏析 */
.quote-section {
  width: 100%;
  margin-bottom: 24rpx;
  position: relative;
  box-sizing: border-box;
}

.quote-actions {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  height: 50rpx;
}

.icon-btn {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 16rpx;
  position: relative;
}

.icon-btn:active {
  transform: scale(0.95);
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.8;
  transition: all 0.2s ease;
}

.action-icon.collected {
  opacity: 1;
  transform: scale(1.1);
  filter: drop-shadow(0 0 2rpx rgba(139, 110, 79, 0.5));
}

.icon-btn:active .action-icon {
  opacity: 1;
}

.quote-content {
  padding: 24rpx 0;
  position: relative;
  width: 100%;
  box-sizing: border-box;
}

.quote-text {
  font-size: 32rpx;
  color: var(--text-main);
  line-height: 1.8;
  margin-bottom: 24rpx;
  display: block;
  text-align: center;
  font-weight: 500;
  position: relative;
  padding: 0 40rpx;
}

.quote-text::before, .quote-text::after {
  content: '"';
  position: absolute;
  color: var(--secondary-color);
  font-size: 56rpx;
  opacity: 0.3;
  font-weight: bold;
}

.quote-text::before {
  left: 0;
  top: -10rpx;
}

.quote-text::after {
  right: 0;
  bottom: -10rpx;
}

.quote-source {
  font-size: 24rpx;
  text-align: right;
  margin-bottom: 24rpx;
  color: var(--primary-color);
}

.quote-translation {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.8;
  padding: 24rpx;
  background-color: rgba(107, 68, 35, 0.05);
  border-radius: 10rpx;
  position: relative;
  width: 100%;
  box-sizing: border-box;
}

/* 推广领取区域 */
.promotion-section {
  width: 100%;
  margin-bottom: 24rpx;
  padding: 0;
  overflow: hidden;
  border-radius: 16rpx;
  box-sizing: border-box;
}

.promotion-banner {
  width: 100%;
  height: 180rpx;
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: white;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

.promotion-banner::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" viewBox="0 0 100 100"><path fill="white" fill-opacity="0.05" d="M0,0 L100,100 M20,0 L100,80 M40,0 L100,60 M60,0 L100,40 M80,0 L100,20 M0,20 L80,100 M0,40 L60,100 M0,60 L40,100 M0,80 L20,100"/></svg>');
  background-size: 100rpx;
}

.promotion-title {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
}

.promotion-desc {
  font-size: 26rpx;
  margin-bottom: 24rpx;
  opacity: 0.9;
}

.promotion-button {
  font-size: 26rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 32rpx;
  background-color: white;
  color: var(--primary-color);
  border-radius: 30rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
}

/* 公告栏 */
.notice-bar {
  background: rgba(255, 251, 230, 0.8);
  color: var(--primary-color);
  display: flex;
  align-items: center;
  position: relative;
  min-height: 60rpx;
  border-radius: var(--radius-md);
  margin-bottom: var(--spacing-md);
  box-shadow: var(--shadow-sm);
  padding: 0 20rpx;
  overflow: hidden;
  width: 100%;
  box-sizing: border-box;
}

.notice-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.marquee-wrap {
  flex: 1;
  overflow: hidden;
  height: 60rpx;
  display: flex;
  align-items: center;
  width: 100%;
  position: relative;
}

.marquee-content {
  display: inline-block;
  white-space: nowrap;
  font-size: 26rpx;
  color: var(--secondary-color);
  height: 60rpx;
  line-height: 60rpx;
  padding-right: 50rpx;
  width: fit-content;
}

.notice-content {
  font-size: 26rpx;
  color: var(--secondary-color);
  margin-right: 4rpx;
  cursor: pointer;
  white-space: nowrap;
  display: inline-block;
}

.notice-detail {
  font-size: 26rpx;
  color: #1890ff;
  cursor: pointer;
  white-space: nowrap;
  display: inline-block;
  padding-right: 20rpx;
  font-weight: 500;
}

.notice-gap {
  color: transparent;
  width: 10rpx;
  display: inline-block;
}

/* 公告详情弹窗 */
.notice-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.notice-modal-content {
  width: 80%;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  display: flex;
  flex-direction: column;
  max-height: 70vh;
}

.notice-modal-header {
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.notice-modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--primary-color);
  text-align: center;
  display: block;
}

.notice-modal-body {
  padding: 24rpx;
  max-height: 50vh;
}

.notice-modal-text {
  font-size: 28rpx;
  color: var(--text-main);
  line-height: 1.6;
}

.notice-modal-footer {
  padding: 24rpx;
  display: flex;
  justify-content: center;
  border-top: 1rpx solid #f0f0f0;
}

.notice-modal-btn {
  display: inline-block;
  background-color: var(--primary-color);
  color: white;
  font-size: 28rpx;
  padding: 12rpx 40rpx;
  border-radius: 40rpx;
  text-align: center;
}

/* 欢迎卡片 */
.welcome-card {
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-md);
}

.user-info {
  display: flex;
  align-items: center;
}

.welcome-text {
  flex: 1;
}

.welcome-greeting {
  display: flex;
  align-items: baseline;
  margin-bottom: 4rpx;
}

.greeting {
  font-size: var(--font-md);
}

.nickname {
  font-size: var(--font-lg);
  margin-left: 6rpx;
}

.slogan {
  font-size: var(--font-sm);
  letter-spacing: 1rpx;
}

/* 学习卡片 */
.study-card {
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-md);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.grade-indicator {
  display: flex;
  align-items: center;
  font-size: 20rpx;
  background-color: rgba(139, 110, 79, 0.05);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  height: 40rpx;
}

.grade-text {
  font-weight: 500;
}

.dropdown-icon {
  width: 24rpx;
  height: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.arrow-down {
  width: 0;
  height: 0;
  border-left: 6rpx solid transparent;
  border-right: 6rpx solid transparent;
  border-top: 8rpx solid var(--primary-color);
}

.arrow-right {
  width: 0;
  height: 0;
  border-top: 6rpx solid transparent;
  border-bottom: 6rpx solid transparent;
  border-left: 8rpx solid white;
}

/* 空状态区域 */
.empty-study-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-xl) 0;
  background: linear-gradient(to bottom, rgba(248, 244, 227, 0.7), rgba(255, 255, 255, 0.9));
  border-radius: var(--radius-md);
}

.empty-course-image {
  width: 260rpx;
  height: 260rpx;
  margin-bottom: var(--spacing-lg);
  filter: drop-shadow(0 10rpx 15rpx rgba(74, 111, 208, 0.1));
}

.empty-course-text {
  margin-bottom: var(--spacing-xs);
  text-align: center;
  letter-spacing: 1rpx;
}

.empty-course-subtext {
  margin-bottom: var(--spacing-xl);
  text-align: center;
  max-width: 80%;
}

.start-btn {
  width: 80%;
  justify-content: space-between;
}

.start-btn-content {
  display: flex;
  align-items: center;
}

.start-btn-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: var(--spacing-sm);
}

/* 已选择课文区域 */


.current-lesson {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-md);
}

.lesson-title {
  flex: 1;
  font-size: var(--font-lg);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.change-btn {
  font-size: var(--font-xs);
  padding: 6rpx 16rpx;
  border-radius: var(--radius-xl);
  margin-left: var(--spacing-md);
  line-height: 1.4;
}

/* 功能卡片 */
.feature-row {
  display: flex;
  justify-content: space-between;
  margin: var(--spacing-md) 0;
}

.feature-spacing {
  width: 20rpx;
}

.feature-card {
  flex: 1;
  height: 140rpx; /* 增加高度 */
  background: #f9f6f1;
  border-radius: 16rpx;
  padding: var(--spacing-md);
  display: flex;
  align-items: center;
  position: relative;
  overflow: hidden;
  transition: all 0.3s;
  border: 1rpx solid rgba(139, 110, 79, 0.1);
  box-shadow: 0 4rpx 12rpx rgba(139, 110, 79, 0.08);
}

.feature-card:active {
  background-color: rgba(139, 110, 79, 0.1);
  transform: translateY(2rpx);
}

.feature-bg {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 100rpx;
  height: 100rpx;
  opacity: 0.07;
  z-index: 0;
}

.feature-icon {
  width: 52rpx; /* 稍微增大图标 */
  height: 52rpx;
  margin-right: var(--spacing-md);
  position: relative;
  z-index: 1;
}

.feature-icon image {
  width: 100%;
  height: 100%;
}

.feature-title {
  font-size: var(--font-md);
  font-weight: 500;
  color: var(--primary-color);
  position: relative;
  z-index: 1;
}

/* 工具网格 */
.tool-grid {
  display: flex;
  justify-content: space-between;
  padding: var(--spacing-md) 0;
}

.tool-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 22%;
}

.tool-icon {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: var(--spacing-xs);
  display: flex;
  justify-content: center;
  align-items: center;
}

.tool-icon image {
  width: 100%;
  height: 100%;
}

.tool-text {
  font-size: var(--font-sm);
  color: var(--text-secondary);
  text-align: center;
}

/* 虚实词学习卡片 */
.word-card {
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-md);
}

.word-selector {
  display: flex;
  align-items: center;
  font-size: var(--font-md);
}

.word-type {
  margin-right: 8rpx;
}

.word-type-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: var(--spacing-md) 0;
}

.word-type-content {
  flex: 1;
}

.word-type-name {
  font-size: var(--font-md);
  display: block;
  margin-bottom: 4rpx;
}

.word-count {
