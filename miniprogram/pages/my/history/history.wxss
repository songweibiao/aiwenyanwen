/* 学习历史页面样式 */
.container {
  padding: 0 30rpx;
  min-height: 100vh;
  background-color: var(--bg-color);
}

/* 头部样式 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.clear-btn {
  font-size: 28rpx;
  color: #999;
  padding: 10rpx 20rpx;
}

/* 加载中样式 - 使用微信原生加载组件样式 */
.loading-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-content {
  width: 100%;
}

/* 微信原生加载样式 */
.weui-loadmore {
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}

.weui-loading {
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  vertical-align: middle;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url("data:image/svg+xml;base64,") no-repeat;
  background-size: 100%;
}

.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
  margin-left: 8rpx;
}

@keyframes weuiLoading {
  0% {
    transform: rotate3d(0, 0, 1, 0deg);
  }
  100% {
    transform: rotate3d(0, 0, 1, 360deg);
  }
}

/* 空状态样式 */
.empty-wrapper {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 100rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.empty-tip {
  font-size: 28rpx;
  color: #999;
}

/* 历史列表样式 */
.history-list {
  padding: 20rpx 0;
}

.history-item {
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.history-item:active {
  background-color: #f9f9f9;
  transform: scale(0.98);
}

.article-info {
  flex: 1;
}

.article-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 400rpx;
}

.article-author {
  font-size: 26rpx;
  color: #999;
}

.study-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.study-status {
  font-size: 26rpx;
  color: #999;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  background-color: #f0f0f0;
  margin-bottom: 10rpx;
}

.study-status.learning {
  color: #ff9c00;
  background-color: rgba(255, 156, 0, 0.1);
}

.study-status.completed {
  color: #52c41a;
  background-color: rgba(82, 196, 26, 0.1);
}

.study-time {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.duration {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 6rpx;
}

.time {
  font-size: 24rpx;
  color: #bbb;
}

/* 未登录状态样式 */
.not-login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.not-login-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.not-login-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.login-btn {
  margin-top: 20rpx;
  width: 240rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 30rpx;
  border-radius: 32rpx;
  background: #8B6E4F;
  color: #fff;
  text-align: center;
  font-weight: bold;
  border: none;
} 