  background-color: var(--primary-color);
  color: #fff;
  font-size: 32rpx;
  padding: 16rpx 80rpx;
  border-radius: 40rpx;
  border: none;
  font-weight: bold;
  box-shadow: 0 4rpx 16rpx rgba(139, 110, 79, 0.25);
  transition: all 0.2s;
}

