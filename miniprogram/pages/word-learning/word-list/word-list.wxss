/* 状态切换栏 */
.status-tabs {
  display: flex;
  overflow-x: auto;
  background-color: #fff;
  padding: 20rpx 10rpx;
  position: sticky;
  top: 110rpx; /* 调整位置，让搜索框在上方 */
  z-index: 10;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

.status-tab {
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  color: #666;
  white-space: nowrap;
  border-radius: 30rpx;
  margin: 0 10rpx;
  transition: all 0.3s;
}

.status-tab.active {
  background-color: #3a7cff;
  color: #fff;
  font-weight: 500;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #3a7cff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 错误信息 */
.error-message {
  margin: 40rpx 20rpx;
  padding: 20rpx;
  background-color: #fff1f0;
  border: 1px solid #ffccc7;
  border-radius: 8rpx;
}

.error-title {
  font-weight: bold;
  color: #ff4d4f;
  margin-right: 10rpx;
}

.error-text {
  color: #ff4d4f;
}

/* 无数据提示 */
.no-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.no-data-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  color: #bbb;
  margin-bottom: 20rpx;
}

.no-data-text {
  font-size: 30rpx;
  color: #999;
}

/* 词条网格 */
.word-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx;
}

.word-item {
  width: calc(33.33% - 20rpx);
  margin: 10rpx;
  height: 180rpx;
  background-color: #fff;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  position: relative;
  transition: all 0.3s;
}

.word-item:active {
  transform: scale(0.95);
}

.word-item.learned {
  background-color: #e6f7ff;
  border: 1px solid #91d5ff;
}

.word-item.review {
  background-color: #fff7e6;
  border: 1px solid #ffd591;
}

.word-item.learning {
  background-color: #f6ffed;
  border: 1px solid #b7eb8f;
}

.word-text {
  font-size: 40rpx;
  font-weight: 500;
}

.word-status-icon {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
}

.status-dot.learned {
  background-color: #1890ff;
}

.status-dot.review {
  background-color: #fa8c16;
}

.status-dot.learning {
  background-color: #52c41a;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 20rpx 0;
  color: #3a7cff;
  font-size: 28rpx;
}

.load-more:active {
  opacity: 0.7;
} 