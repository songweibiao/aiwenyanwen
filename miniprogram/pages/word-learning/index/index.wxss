/* miniprogram/pages/word-learning/index/index.wxss */
/* 全局变量 */
page {
  --primary-color: #8B6E4F;  /* 深棕色 */
  --secondary-color: #C83E3E;  /* 朱红色 */
  --bg-color: #F8F4E3;  /* 米白色 */
  --text-main: #333333;  /* 深灰 */
  --text-secondary: #666666;  /* 中灰 */
  --green-color: #7EA075;  /* 绿色 */
  --golden-color: #E6B56B;  /* 金色 */
  background-color: var(--bg-color);
}

.container {
  padding: 24rpx 20rpx;
  min-height: 100vh;
  box-sizing: border-box;
  padding-bottom: 50px; /* for custom tab bar */
  padding-bottom: calc(50px + constant(safe-area-inset-bottom)); /* for custom tab bar on iphonex */
  padding-bottom: calc(50px + env(safe-area-inset-bottom)); /* for custom tab bar on iphonex */
}

.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(107, 68, 35, 0.1);
  padding: 24rpx;
  margin-bottom: 24rpx;
  position: relative;
  border: 1rpx solid rgba(107, 68, 35, 0.15);
  width: 100%;
  box-sizing: border-box;
}

/* 卡片标题样式 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid rgba(139, 110, 79, 0.06);
}

.card-title {
  display: flex;
  align-items: center;
}

.icon-title {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.title-text {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--primary-color);
}

/* 进度卡片 */
.progress-card {
  padding: 36rpx 30rpx;
  margin-top: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 16rpx rgba(107, 68, 35, 0.15);
}

.collection-selector {
  display: flex;
  align-items: center;
}

.collection-name {
  font-size: 28rpx;
  color: var(--primary-color);
  font-weight: 600;
}

.progress-bar {
  height: 14rpx;
  background-color: rgba(107, 68, 35, 0.1);
  border-radius: 7rpx;
  margin: 20rpx 0 30rpx;
  overflow: hidden;
}

.progress-inner {
  height: 100%;
  background-color: var(--primary-color);
  border-radius: 7rpx;
}

.progress-stats {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  padding: 10rpx 0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%; /* 确保四个统计项均匀分布 */
  box-sizing: border-box;
  padding: 10rpx 5rpx;
}

.stat-number {
  font-size: 38rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 26rpx;
  color: var(--text-secondary);
}

/* 分类卡片 */
.categories-card {
  padding: 24rpx;
}

.category-grid {
  display: flex;
  flex-direction: column;
  padding: 10rpx 0;
}

.category-item {
  width: 92%;
  background: #F9F6F1;
  border-radius: 16rpx;
  padding: 36rpx 24rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  border: 1rpx solid rgba(139, 110, 79, 0.1);
  box-shadow: 0 4rpx 12rpx rgba(139, 110, 79, 0.08);
  transition: all 0.3s;
  position: relative;
  overflow: hidden;
}

.category-item.selected {
  background: rgba(139, 110, 79, 0.08);
  border: 1rpx solid rgba(139, 110, 79, 0.2);
}

.category-icon {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  z-index: 2;
}

.category-icon-img {
  width: 52rpx;
  height: 52rpx;
}

.category-icon-0 { background: rgba(126, 160, 117, 0.15); }
.category-icon-1 { background: rgba(230, 181, 107, 0.15); }
.category-icon-2 { background: rgba(60, 156, 255, 0.15); }
.category-icon-3 { background: rgba(200, 62, 62, 0.15); }

.category-info {
  display: flex;
  flex-direction: column;
  z-index: 2;
}

.category-name {
  font-size: 36rpx;
  color: var(--text-main);
  font-weight: 600;
  margin-bottom: 8rpx;
}

.category-count {
  font-size: 26rpx;
  color: var(--text-secondary);
}

/* 每日一词卡片 */
.daily-word-card {
  padding: 22rpx 20rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(139, 110, 79, 0.06);
  position: relative;
  border: 1rpx solid rgba(139, 110, 79, 0.08);
}

.refresh-btn {
  background-color: rgba(139, 110, 79, 0.06);
  padding: 4rpx 16rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
}

.refresh-text {
  font-size: 22rpx;
  color: var(--primary-color);
  font-weight: 500;
}

.daily-word-content {
  padding: 4rpx 2rpx;
}

.daily-word-loading {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
  color: var(--text-secondary);
  font-size: 28rpx;
}

/* 词语展示区 */
.word-row {
  display: flex;
  margin-bottom: 16rpx;
  align-items: flex-end;
}

.word-container {
  position: relative;
  margin-left: 10rpx;
  margin-right: 45rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.daily-word-text {
  font-size: 60rpx;
  font-weight: bold;
  color: var(--primary-color);
  line-height: 1.1;
  position: relative;
  z-index: 2;
  text-shadow: 0 1px 0 rgba(255, 255, 255, 0.8);
}

.word-decoration {
  position: absolute;
  bottom: -4rpx;
  left: -6rpx;
  right: -6rpx;
  height: 16rpx;
  background-color: rgba(139, 110, 79, 0.15);
  border-radius: 8rpx;
  z-index: 1;
}

.word-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-bottom: 0rpx;
}

.daily-word-pinyin {
  font-size: 24rpx;
  color: var(--text-secondary);
  font-style: italic;
  margin-bottom: 6rpx;
}

.tag-meaning {
  display: flex;
  align-items: center;
}

.tag {
  font-size: 22rpx;
  color: #FFFFFF;
  background-color: var(--primary-color);
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
  margin-right: 8rpx;
  flex-shrink: 0;
}

.meaning-text {
  font-size: 26rpx;
  color: var(--text-main);
  line-height: 1.5;
  flex: 1;
}

/* 例句展示区 */
.example-section {
  background-color: rgba(139, 110, 79, 0.04);
  padding: 16rpx 18rpx;
  border-radius: 10rpx;
  margin-top: 8rpx;
  position: relative;
  overflow: hidden;
}

.example-content {
  display: flex;
  align-items: flex-start;
  margin-bottom: 10rpx;
}

.example-tag {
  background-color:#E6B56B;
  margin-top: 2rpx;
}

.example-text {
  font-size: 26rpx;
  color: var(--text-main);
  line-height: 1.5;
  flex: 1;
}

.source-line {
  text-align: right;
  font-size: 24rpx;
  color: var(--text-secondary);
  font-style: italic;
  margin: 8rpx 0;
  padding-right: 4rpx;
}

.translation {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
  padding-top: 8rpx;
  border-top: 1rpx dashed rgba(139, 110, 79, 0.15);
}

.translation-prefix {
  font-size: 22rpx;
  color: #FFFFFF;
  background-color: #6B8E4E;
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
  margin-right: 8rpx;
  flex-shrink: 0;
}

.translation-text {
  font-size: 26rpx;
  color: #6B8E4E;
  line-height: 1.5;
  flex: 1;
}

.daily-word-footer {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
}

.login-tip {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-top: 16rpx;
  text-align: center;
}

/* 登录卡片 */
.login-card {
  padding: 40rpx 24rpx;
}

.login-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-image {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.login-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-main);
  margin-bottom: 10rpx;
}

.login-subtitle {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 30rpx;
}

.login-btn {
  background-color: var(--primary-color);
  color: #fff;
  font-size: 28rpx;
  padding: 0 60rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  border: none;
}

/* 错误信息 */
.error-message {
  background: #fff0f0;
  color: #d93026;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 24rpx;
}

.error-title {
  font-weight: bold;
  margin-right: 8rpx;
}

.error-text {
  font-size: 24rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 40rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid rgba(139, 110, 79, 0.1);
  border-top: 6rpx solid var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
