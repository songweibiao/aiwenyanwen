/* miniprogram/pages/word-learning/index/index.wxss */
/* 全局变量 */
page {
  --primary-color: #8B6E4F;  /* 深棕色 */
  --secondary-color: #C83E3E;  /* 朱红色 */
  --bg-color: #F8F4E3;  /* 米白色 */
  --text-main: #333333;  /* 深灰 */
  --text-secondary: #666666;  /* 中灰 */
  --green-color: #7EA075;  /* 绿色 */
  --golden-color: #E6B56B;  /* 金色 */
  background-color: var(--bg-color);
}

.container {
  padding: 24rpx 20rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(107, 68, 35, 0.1);
  padding: 24rpx;
  margin-bottom: 24rpx;
  position: relative;
  border: 1rpx solid rgba(107, 68, 35, 0.15);
  width: 100%;
  box-sizing: border-box;
}

/* 卡片标题样式 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-title {
  display: flex;
  align-items: center;
}

.icon-title {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}

.title-text {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--primary-color);
}

/* 欢迎卡片 */
.welcome-card {
  background: linear-gradient(135deg, #8B6E4F 0%, #6B4423 100%);
  color: #fff;
  overflow: hidden;
  position: relative;
  padding: 30rpx;
}

.welcome-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  z-index: 2;
}

.welcome-header {
  display: flex;
  flex-direction: column;
}

.welcome-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.welcome-subtitle {
  font-size: 26rpx;
  opacity: 0.8;
}

.welcome-decoration {
  position: relative;
}

.decoration-image {
  width: 80rpx;
  height: 80rpx;
  opacity: 0.8;
}

/* 进度卡片 */
.progress-card {
  padding-bottom: 30rpx;
}

.collection-selector {
  display: flex;
  align-items: center;
}

.collection-name {
  font-size: 26rpx;
  color: var(--primary-color);
  font-weight: 500;
}

.progress-bar {
  height: 10rpx;
  background-color: rgba(107, 68, 35, 0.1);
  border-radius: 5rpx;
  margin: 10rpx 0 20rpx;
  overflow: hidden;
}

.progress-inner {
  height: 100%;
  background-color: var(--primary-color);
  border-radius: 5rpx;
}

.progress-stats {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%; /* 确保四个统计项均匀分布 */
  box-sizing: border-box;
  padding: 0 5rpx;
}

.stat-number {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 分类卡片 */
.categories-card {
  padding: 24rpx;
}

.category-grid {
  display: flex;
  flex-direction: column;
  padding: 10rpx 0;
}

.category-item {
  width: 92%;
  background: #fff;
  border-radius: 16rpx;
  padding: 36rpx 24rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(107, 68, 35, 0.1);
  border: 1rpx solid rgba(107, 68, 35, 0.1);
  transition: all 0.3s;
  position: relative;
  overflow: hidden;
}

.category-icon {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  z-index: 2;
}

.category-icon-img {
  width: 52rpx;
  height: 52rpx;
}

.category-icon-0 { background: rgba(126, 160, 117, 0.15); }
.category-icon-1 { background: rgba(230, 181, 107, 0.15); }
.category-icon-2 { background: rgba(60, 156, 255, 0.15); }
.category-icon-3 { background: rgba(200, 62, 62, 0.15); }

.category-info {
  display: flex;
  flex-direction: column;
  z-index: 2;
}

.category-name {
  font-size: 36rpx;
  color: var(--text-main);
  font-weight: 600;
  margin-bottom: 8rpx;
}

.category-count {
  font-size: 26rpx;
  color: var(--text-secondary);
}

/* 登录卡片 */
.login-card {
  padding: 40rpx 24rpx;
}

.login-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-image {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.login-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-main);
  margin-bottom: 10rpx;
}

.login-subtitle {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 30rpx;
}

.login-btn {
  background-color: var(--primary-color);
  color: #fff;
  font-size: 28rpx;
  padding: 0 60rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  border: none;
}

/* 错误信息 */
.error-message {
  background: #fff0f0;
  color: #d93026;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 24rpx;
}

.error-title {
  font-weight: bold;
  margin-right: 8rpx;
}

.error-text {
  font-size: 24rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 40rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid rgba(139, 110, 79, 0.1);
  border-top: 6rpx solid var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
