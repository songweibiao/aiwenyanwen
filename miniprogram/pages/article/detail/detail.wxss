.exercise-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx dashed rgba(139, 110, 79, 0.2);
}

.exercise-question {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--primary-dark);
  line-height: 1.5;
  flex: 1;
}

.exercise-progress-indicator {
  font-size: 26rpx;
  color: var(--primary-color);
  background-color: rgba(139, 110, 79, 0.08);
  padding: 6rpx 16rpx;
  border-radius: 24rpx;
  margin-left: 16rpx;
  flex-shrink: 0;
}

/* 选项样式 */
.exercise-options {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.exercise-option {
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  background: rgba(250, 248, 242, 0.8);
  font-size: 30rpx;
  color: var(--text-color);
  border: 2rpx solid rgba(139, 110, 79, 0.1);
  transition: all 0.2s;
  display: flex;
  align-items: center;
  position: relative;
}

.option-letter {
  width: 48rpx;
  height: 48rpx;
  background-color: rgba(139, 110, 79, 0.1);
  color: var(--primary-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.option-content {
  flex: 1;
  line-height: 1.5;
}

.option-selected-icon {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background-color: var(--primary-color);
  position: relative;
  margin-left: 16rpx;
}

.option-selected-icon:after {
  content: "";
  position: absolute;
  width: 12rpx;
  height: 6rpx;
  border-left: 3rpx solid #fff;
  border-bottom: 3rpx solid #fff;
  transform: rotate(-45deg);
  top: 8rpx;
  left: 6rpx;
}

.exercise-option.option-selected {
  background: rgba(139, 110, 79, 0.08);
  border-color: var(--primary-color);
  color: var(--primary-dark);
  font-weight: 500;
}

.exercise-option.option-selected .option-letter {
  background-color: var(--primary-color);
  color: #fff;
}

.exercise-option.option-correct {
  background: rgba(126, 160, 117, 0.08);
  border-color: var(--success-color);
  color: var(--success-color);
  font-weight: 500;
}

.exercise-option.option-correct .option-letter {
  background-color: var(--success-color);
  color: #fff;
}

.exercise-option.option-wrong {
  background: rgba(200, 62, 62, 0.08);
  border-color: var(--secondary-color);
  color: var(--secondary-color);
  font-weight: 500;
}

.exercise-option.option-wrong .option-letter {
  background-color: var(--secondary-color);
  color: #fff;
}

.option-tag {
  margin-left: 16rpx;
  font-size: 24rpx;
  color: #888;
}

.tag-user-correct {
  color: var(--success-color);
  font-weight: bold;
}

.tag-correct {
  color: var(--success-color);
  font-weight: bold;
}

.tag-user {
  color: var(--warning-color);
  font-weight: bold;
}

