.audio-btn-play:active {
  transform: scale(0.95);
  background: var(--secondary-color);
}

.play-icon {
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 12rpx 0 12rpx 20rpx;
  border-color: transparent transparent transparent #fff;
  margin-left: 4rpx;
  opacity: 1;
  transition: all 0.2s ease;
}

