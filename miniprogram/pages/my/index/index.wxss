/* 页面容器 */
.container {
  background: linear-gradient(180deg, #fdfaf6 0%, #f7f2ec 100%);
  min-height: 100vh;
  padding: 30rpx 40rpx 40rpx;
  box-sizing: border-box;
}

/* 通用卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(139, 110, 79, 0.08);
  margin-bottom: 40rpx;
}

/* 用户卡片样式 */
.user-card {
  padding: 40rpx;
  position: relative;
  overflow: hidden;
}

.user-info-wrapper {
  position: relative;
  z-index: 1;
  width: 100%;
}

/* 未登录状态 */
.avatar-placeholder {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  background-color: #f7f2ec;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 30rpx;
  overflow: hidden;
}

.avatar-icon {
  width: 100%;
  height: 100%;
}

.login-btn-wrapper {
  flex: 1;
}

.login-btn {
  width: 100% !important;
  font-size: 32rpx;
  font-weight: bold;
  padding: 20rpx 0;
  background: linear-gradient(90deg, #c5a685 0%, #8b6e4f 100%);
  color: white;
  border-radius: 40rpx;
}

/* 已登录状态 */
.user-basic {
  display: flex;
  align-items: center;
}

.avatar-container {
  position: relative;
  width: 140rpx;
  height: 140rpx;
  margin-right: 30rpx;
}

.avatar-wrapper {
  padding: 0;
  width: 140rpx !important;
  height: 140rpx !important;
  border-radius: 50%;
  overflow: hidden;
  background: transparent;
  position: relative;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(139, 110, 79, 0.2);
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 100%;
  height: 100%;
}

.user-text {
  display: flex;
  flex-direction: column;
  justify-content: center;
}


.username {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}


.user-openid {
  font-size: 24rpx;
  color: #aaa;
  background-color: #f7f7f7;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  max-width: 320rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}


/* 功能列表 */
.feature-list {
  padding: 10rpx 40rpx;
}

.feature-item {
  padding: 36rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: background-color 0.2s ease;
}

.feature-item:last-child {
  border-bottom: none;
}

.feature-item:active {
  background-color: #f9f9f9;
}

.feature-name {
  font-size: 30rpx;
  color: #444;
}

.feature-arrow {
  width: 16rpx;
  height: 28rpx;
  background-image: url("data:image/svg+xml,%3Csvg width='8' height='14' viewBox='0 0 8 14' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 1L7 7L1 13' stroke='%23C7C7CC' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E");
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}
