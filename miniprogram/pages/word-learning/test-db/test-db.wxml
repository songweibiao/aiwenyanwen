<view class="container">
  <view class="header">
    <text class="title">词条数据测试</text>
    <button bindtap="refresh" class="refresh-btn">刷新数据</button>
  </view>

  <!-- 调试信息区域 -->
  <view class="debug-info" wx:if="{{debugInfo}}">
    <text class="debug-title">调试信息:</text>
    <text class="debug-text">{{debugInfo}}</text>
  </view>

  <view class="error-message" wx:if="{{error}}">
    <text>{{error}}</text>
  </view>

  <view class="loading" wx:if="{{loading}}">
    <text>加载中...</text>
  </view>

  <view class="no-data" wx:if="{{!loading && wordItems.length === 0}}">
    <text>暂无数据</text>
  </view>

  <view class="word-list" wx:if="{{!loading && wordItems.length > 0}}">
    <view class="word-item" wx:for="{{wordItems}}" wx:key="index">
      <view class="word-header">
        <text class="word-text">{{item.word || '无词条'}}</text>
        <text class="word-id">ID: {{item.wordId || '无ID'}}</text>
      </view>
      <view class="word-info">
        <view class="info-row">
          <text class="label">拼音：</text>
          <text>{{item.pinyin || '无拼音'}}</text>
        </view>
        <view class="info-row">
          <text class="label">词性：</text>
          <text>{{item.wordType || '无词性'}}</text>
        </view>
        <view class="info-row">
          <text class="label">词义：</text>
          <text>{{item.meaning || '无词义'}}</text>
        </view>
        <view class="info-row">
          <text class="label">例句：</text>
          <text>{{item.example || '无例句'}}</text>
        </view>
        <view class="info-row">
          <text class="label">出处：</text>
          <text>{{item.source || '无出处'}}</text>
        </view>
        <view class="info-row">
          <text class="label">释义：</text>
          <text>{{item.translation || '无释义'}}</text>
        </view>
        <view class="info-row">
          <text class="label">合集：</text>
          <text>{{item.collection || '无合集'}}</text>
        </view>
      </view>
    </view>
  </view>
</view> 